@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.GenusViewModel
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Genera (@Model.DataCollection.Count)</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <div id="section-search-results">
            <table id="data_table_taxonomy_genus" class="table table-striped ggtools-table" style="width:100%;">
                <thead>
                    <tr>
                        <th></th>
                        <th width="5%">ID</th>
                        <th>Name</th>
                        <th>Family</th>
                        <th>Qualifying Code</th>
                        <th>Hybrid Code</th>
                        <th style="text-align:center;">Accepted?</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.DataCollection != null)
                    {
                        if (Model.DataCollection.Count() > 0)
                        {
                            foreach (var result in Model.DataCollection)
                            {
                                <tr>
                                    <td>
                                        @result.ID
                                    </td>
                                    <td>
                                        @result.ID
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit","Genus", new { @entityId = result.ID })">
                                            @Html.Raw(result.AssembledName)
                                        </a>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit","Family", new { @entityId = result.FamilyID })">
                                            @Html.Raw(result.FamilyAssembledName)
                                        </a>
                                    </td>
                                    <td>
                                        @result.QualifyingCodeTitle
                                    </td>
                                    <td>
                                        @result.HybridCodeTitle
                                    </td>
                                    <td style="text-align:center;">@Html.Raw(Model.FormatBoolean(result.IsAcceptedName))</td>
                                    <td style="text-align:right;">
                                        <a href="@Url.Action("Edit", "Genus", new { entityId = result.ID })" class="btn btn-default btn-sm pull-right row-edit">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        @if (Model.EventAction == "FOLDER")
                                        {
                                            <a href="@Url.Action("DeleteItem", "Folder", new { @folderId = result.FolderID, @appUserItemListId = result.AppUserItemListID })"
                                               class="btn btn-danger btn-sm float-right row-edit margin-r-5">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        InitDataTable("data_table_taxonomy_genus");
    });
</script>
