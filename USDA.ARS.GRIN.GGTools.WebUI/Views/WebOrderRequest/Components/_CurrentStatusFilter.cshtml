@model USDA.ARS.GRIN.GGTools.ViewModelLayer.WebOrderRequestViewModel
<input type="hidden" id="hf_current_filter_web_order_request_status" />
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-filter"></i>
            Current Status
        </h3>
    </div>
    <div class="card-body">
        <div id="section-current-status">
            @foreach (var result in Model.WebOrderRequestStatuses)
            {
                string checkboxBackgroundColorStyle = "";

                switch(result.Value)
                {
                    case "ACCEPTED":
                        checkboxBackgroundColorStyle = "color:white;background-color:#00a65a;";
                        break;
                    case "CANCELED":
                        checkboxBackgroundColorStyle = "color:white;background-color:#f39c12;";
                        break;
                    case "SUBMITTED":
                        checkboxBackgroundColorStyle = "color:white;background-color:#605ca8;";
                        break;
                    case "MIXED":
                        checkboxBackgroundColorStyle = "color:white;background-color:blue;";
                        break;
                    case "NRR_FLAG":
                        checkboxBackgroundColorStyle = "color:white;background-color:#e96c67;";
                        break;
                    case "NRR_HOLD":
                        checkboxBackgroundColorStyle = "color:magenta;background-color:#e96c67;";
                        break;
                    default:
                        checkboxBackgroundColorStyle = "background-color:transparent;";
                        break;
                }
                <label class="button-checkbox" style="@checkboxBackgroundColorStyle">
                    <input id="filter-current-status-@result.Value" type="checkbox" data-ggtools-action="@result.Value" />
                    <span>@result.Text</span>
                </label>
            }
        </div>
    </div>
</div>
<script type="text/javascript">


</script>