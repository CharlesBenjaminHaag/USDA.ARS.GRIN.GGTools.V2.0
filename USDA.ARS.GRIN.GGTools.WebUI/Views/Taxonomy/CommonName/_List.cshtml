@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.CommonNameViewModel
<div class="card card-default">
        <div class="card-header">
            <h3 class="card-title">Common Names (@Model.DataCollection.Count)</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div id="section-search-results" class="data-list">
                <table id="data-table-common-names" class="table table-striped ggtools-table">
                    <thead>
                        <tr>
                            <th></th>
                            <th width="5%">ID</th>
                            <th>Name</th>
                            <th>Genus Name</th>
                            <th>Species Name</th>
                            <th>Language Name</th>
                            <th>Simplified Name</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.DataCollection != null)
                        {
                            if (Model.DataCollection.Count() > 0)
                            {
                                foreach (var result in Model.DataCollection)
                                {
                                    <tr>
                                        <td>
                                            @result.ID
                                        </td>
                                        <td>
                                            <span class="label label-default">
                                                @result.ID
                                            </span>
                                        </td>
                                        <td>@result.Name</td>
                                        <td>
                                            <a href="@Url.Action("Edit","Genus", new { entityId = result.GenusID })">@Html.Raw(result.GenusName)</a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit","Species", new { entityId = result.SpeciesID })">@Html.Raw(result.SpeciesName)</a>
                                        </td>
                                        <td>@result.LanguageDescription</td>
                                        <td>@result.SimplifiedName</td>
                                        <td style="text-align:right;">
                                            
                                        </td>
                                        <td style="text-align:right;">
                                            @if (result.CitationID > 0)
                                            {
                                                <button id="@result.CitationID" class="btn btn-default btn-sm citation-detail">
                                                    <i class="fa fa-book"></i>
                                                </button>
                                            }
                                            <a href="@Url.Action("Edit", "CommonName", new { entityId = result.ID })" class="btn btn-default btn-sm pull-right row-edit">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                            @*@if (Model.Action == "Folder")
                                                {
                                                    <button id="btnDeleteFolderItem_@cropForCWR.ReferenceID" class="btn btn-danger btn-sm pull-right row-edit margin-r-5">
                                                        <i class="fa fa-trash"></i> Remove From Folder
                                                    </button>
                                                }*@
                                        </td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<script type="text/javascript">
    $(document).ready(function () {
        Init();
        InitDataTable("data-table-common-names");
    });
</script>




