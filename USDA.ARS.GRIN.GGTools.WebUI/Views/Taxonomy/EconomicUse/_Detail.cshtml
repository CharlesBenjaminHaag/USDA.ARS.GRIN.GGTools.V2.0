@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.EconomicUseViewModelBase
<div id="section-folder-confirmation"></div>
<div class="card">
    <div class="card-header p-2">
        <ul class="nav nav-pills">
            <li class="nav-item"><a class="nav-link active" href="#section-search-criteria" data-toggle="tab">Search Criteria</a></li>
            <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Saved Searches</a></li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content">
            <div class="tab-pane active" id="section-search-criteria">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Species Name</label>
                            @Html.TextBoxFor(x => x.SearchEntity.SpeciesName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Economic Use</label>
                            @Html.TextBoxFor(x=>x.SearchEntity.AssembledName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Plant Part</label>
                            @Html.DropDownListFor(x => x.SearchEntity.PlantPartCode, Model.PlantPartCodes, "All values", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group form-horizontal">
                            <label>Note</label>
                            @Html.TextBoxFor(x => x.SearchEntity.Note, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                @Html.Partial("~/Views/Taxonomy/EconomicUse/_DetailExtended.cshtml")
                <div>
                    <button id="btnReset" type="button" class="btn btn-default">Reset</button>
                    <div class="btn-group float-right">
                        <button type="submit" class="btn btn-info">Search</button>
                        <button type="button" class="btn btn-info dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu" role="menu" style="">
                            <a id="btnSaveSearch" class="dropdown-item" href="#">Save Search</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="timeline">
                <div class="row">
                    <div class="col-md-12">
                        @{Html.RenderAction("_List", "AppUserDynamicQuery"); }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


