@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.LiteratureViewModel
<div id="section-search-results" class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Literature (@Model.DataCollection.Count)</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <table id="data-table-literature" class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th width="5%">ID</th>
                    <th>Standard Abbreviation</th>
                    <th>Reference Title</th>
                    <th>Author</th>
                    <th>Publication Year</th>
                    <th>Last Modified</th>
                    <th>Modified By</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.DataCollection != null)
                {
                    if (Model.DataCollection.Count() > 0)
                    {
                        foreach (var result in Model.DataCollection)
                        {
                            <tr>
                                <td>
                                    @result.ID
                                </td>
                                <td>
                                    @result.ID
                                </td>
                                <td>@Html.Raw(result.StandardAbbreviation)</td>
                                <td>@Html.Raw(result.ReferenceTitle)</td>
                                <td>@result.EditorAuthorName</td>
                                <td>@result.PublicationYear</td>
                                <td>
                                    @if (result.ModifiedDate > DateTime.MinValue)
                                    {
                                        @result.ModifiedDate.ToShortDateString()
                                    }
                                </td>
                                <td>
                                    @result.ModifiedByCooperatorName
                                </td>
                                <td style="text-align:right;">
                                    <a href="@Url.Action("Edit", "Literature", new { entityId = result.ID })" class="btn btn-default btn-sm pull-right row-edit">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    @*@if (Model.Action == "Folder")
                                        {
                                            <button id="btnDeleteFolderItem_@cropForCWR.ReferenceID" class="btn btn-danger btn-sm pull-right row-edit margin-r-5">
                                                <i class="fa fa-trash"></i> Remove From Folder
                                            </button>
                                        }*@
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        Init();
        InitDataTable("data-table-literature");
    });
</script>


