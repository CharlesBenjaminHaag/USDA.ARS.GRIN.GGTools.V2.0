@model USDA.ARS.GRIN.GGTools.ViewModelLayer.CooperatorViewModel
<div class="card card-primary card-outline">
    <div class="card-body box-profile">
        <div class="text-center">
            <img class="profile-user-img img-fluid img-circle" src="~/dist/img/user-default.png" alt="User profile picture">
        </div>
        <h3 class="profile-username text-center">@Model.Entity.FirstName @Model.Entity.LastName</h3>
        <p class="text-muted text-center">@Model.Entity.JobTitle</p>
        @if (Model.Entity.StatusCode == "ACTIVE")
        {
            <span class="badge bg-green">
                @Model.Entity.StatusCode
            </span>
        }
        else
        {
            <span class="badge bg-red">
                @Model.Entity.StatusCode
            </span>
        }
        <ul class="list-group list-group-unbordered mb-3">
            <li class="list-group-item">
                <b>Organization</b> <a class="float-right"> @Model.Entity.Organization</a>
            </li>
            <li class="list-group-item">
                <b>Email</b> <a class="float-right">@Model.Entity.EmailAddress</a>
            </li>
            <li class="list-group-item">
                <b>Phone</b> <a class="float-right">@Model.Entity.PrimaryPhone</a>
            </li>
            <br />
            <strong><i class="fas fa-map-marker-alt mr-1"></i> Address</strong>
            <p class="text-muted">
                @Model.Entity.AddressLine1<br />
                @Model.Entity.AddressLine2<br />
                @Model.Entity.AddressLine3<br />
                @Model.Entity.City @Model.Entity.PostalIndex<br />
            </p>
        </ul>
        <a href="@Url.Action("Edit","Cooperator", new { @entityId = Model.Entity.ID })" class="btn btn-primary btn-block">
            Edit My Cooperator Record
        </a>
    </div>

</div>

