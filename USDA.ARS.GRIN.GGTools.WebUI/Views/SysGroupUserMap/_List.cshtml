@model USDA.ARS.GRIN.GGTools.ViewModelLayer.SysGroupUserMapViewModel
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Groups </h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <!-- /.box-header -->
    <div class="card-body">
        <table id="data-table-sys-group-user-map" class="table table-striped">
            <thead>
                <tr>
                    <th width="5%"></th>
                    <th>ID</th>
                    <th>Group Tag</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in Model.DataCollection)
                {
                <tr>
                    <td>
                        @result.ID
                    </td>
                    <td>
                        @result.ID
                    </td>
                    <td>
                        @result.GroupTag
                    </td>
                    <td>@result.Title</td>
                    <td>@result.Description</td>
                    <td style="text-align:right;">
                        <div class="edit-controls">
                            <button id="@result.ID" class="btn btn-danger btn-sm pull-right row-delete">
                                Delete
                            </button>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        Init();
        InitDataTable("data-table-sys-group-user-map");
    });
</script>



