@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.CWRTraitViewModel

<div id="section-search-results" class="card card-success">
    <div class="card-header">
        <h3 class="card-title">CWR Traits (@Model.DataCollection.Count)</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <table id="data_table_taxonomy_cwr_trait" class="table table-striped" style=" width:100%;">
            <thead>
                <tr>
                    <th></th>
                    <th width="5%">ID</th>
                    <th>CWR Map Name</th>
                    <th>Trait Class</th>
                    <th>Breeding Type</th>
                    <th>Citation</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.DataCollection != null)
                {
                    if (Model.DataCollection.Count() > 0)
                    {
                        foreach (var result in Model.DataCollection)
                        {
                            <tr>
                                <td>
                                    @result.ID
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "CWRTrait", new { @entityId = result.ID })">[@result.ID]</a>
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "CWRMap", new { entityId = result.CWRMapID })">
                                        @result.AssembledName
                                    </a>
                                </td>
                                <td>@result.TraitClassTitle</td>
                                <td>@result.BreedingTypeTitle</td>
                                <td>@result.CitationText</td>
                                <td>
                                    @if (Model.EventAction == "FOLDER")
                                    {
                                        <a href="@Url.Action("DeleteItem", "Folder", new { @folderId = result.FolderID, @appUserItemListId = result.AppUserItemListID })"
                                           class="btn btn-danger btn-sm float-right row-edit margin-r-5">
                                            <i class="fa fa-trash"></i>
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("Edit", "CWRTrait", new { entityId = result.ID })" class="btn btn-default btn-sm float-right row-edit">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                    }
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<div id="section-batch-edit-modal">
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#data_table_taxonomy_cwr_trait').DataTable({
            dom: 'Bfrtip',
            responsive: true,
            select: true,
            buttons: [
                {
                    extend: 'copyHtml5',
                    exportOptions: {
                        columns: [0, ':visible']
                    }
                },
                {
                    extend: 'excelHtml5',
                    exportOptions: {
                        columns: ':visible'
                    }
                },
                {
                    extend: 'pdfHtml5',
                    exportOptions: {
                        columns: [0, 1, 2, 5]
                    }
                },
                'colvis',
                'selectAll',
                'selectNone',
                {
                    text: 'Add to Folder',
                    action: function (e, dt, node, config) {
                        OpenFolderModal();
                    }
                }
            ]

        });


        $('#data_table_taxonomy_author tbody').on('click', 'tr', function () {
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
            }
            else {
                table.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
            }
        });


    });

     function EditBatch() {
         var selectedIdList = GetSelectedEntityIDs("data_table_taxonomy_cwr_trait");
        var link = '@Url.Action("RenderBatchEditModal","CWRTrait", new { entityIdList = "SELECTED_ID_LIST" })';
        link = link.replace("SELECTED_ID_LIST", selectedIdList);
        var formData = new FormData();

        //DEBUG
        /*alert("ID LIST " + selectedIdList); */

        formData.append("idList", selectedIdList);

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            contentType: false,
            processData: false,
            data: formData,
            success: function (response) {
                $("#section-batch-edit-modal").html(response);
                $("#modal-cwr-trait-batch-edit").modal("show");
            }
        });
    }
</script>

