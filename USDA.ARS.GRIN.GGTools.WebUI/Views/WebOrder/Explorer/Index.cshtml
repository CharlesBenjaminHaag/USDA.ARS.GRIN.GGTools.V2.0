    function LoadWebOrderRequestList(timeFrame, selectedStatusList, selectedWebUserList)  {
        var link = '@Url.Action("_Lookup", "WebOrder")';
        var formData = new FormData();

        formData.append("TimeFrame", timeFrame);
        //formData.append("SelectedStatusList", selectedStatusList);
        //formData.append("SelectedWebUserList", selectedWebUserList);

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            contentType: false,
            processData: false,
            data: formData,
            success: function (response) {
                $("#section-web-order-search-results").html(response);
                InitDataTableWebOrderRequests("table_web_order_requests");
            }
        });
    }

    function LoadWebOrderRequestDetail(webOrderRequestId) {
        link = '@Url.Action("ExplorerDetail", "WebOrder")';
        var formData = new FormData();

        formData.append("entityId", webOrderRequestId);

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            contentType: false,
            processData: false,
            data: formData,
            success: function (response) {
                $("#section-web-order-request-detail").html(response);
            }
        });
    }

