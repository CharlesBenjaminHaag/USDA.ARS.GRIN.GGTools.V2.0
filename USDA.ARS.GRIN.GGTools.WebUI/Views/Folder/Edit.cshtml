@model USDA.ARS.GRIN.GGTools.ViewModelLayer.FolderViewModel
@{
    ViewBag.Title = Model.PageTitle;
    Layout = "~/Views/Shared/_LayoutAdminLTE3.cshtml";
}
@Html.Partial("~/Views/Shared/_RevisionHistory.cshtml")

<div class="card">
    <div id="section-folder-options" class="card-header p-2">
        <ul class="nav nav-pills">
            <li id="tab-folder-detail" class="nav-item"><a class="nav-link active" href="#detail" data-toggle="tab">Detail</a></li>
            <li id="tab-folder-sharing" class="nav-item"><a class="nav-link" href="#sharing" data-toggle="tab">Sharing</a></li>
        </ul>
    </div>
    <div class="card-body" id="section-search-criteria">
        <div class="tab-content">
            <div class="tab-pane active" id="detail">
                @using (Html.BeginForm("Edit", "Folder", FormMethod.Post, new { id = "frmEdit" }))
                {
                    @Html.HiddenFor(x => x.PageTitle)
                    @Html.HiddenFor(x => x.EventAction)
                    @Html.HiddenFor(x => x.EventValue)
                    @Html.HiddenFor(x => x.TableName)
                    @Html.HiddenFor(x => x.TableCode)
                    @Html.HiddenFor(x => x.Entity.ID)
                    @Html.HiddenFor(x => x.Entity.FolderType)
                    @Html.HiddenFor(x => x.Entity.RelatedItemCount)
                    <div class="row">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Type</label>
                                @Html.TextBoxFor(x => x.Entity.FolderTypeDescription, new { @class = "form-control", @readonly="readonly" })
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Name</label>
                                @Html.TextBoxFor(x => x.Entity.FolderName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Category</label>
                                @Html.DropDownListFor(x => x.Entity.Category, Model.Categories, "Select value", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Add Category</label>
                                @Html.TextBoxFor(x => x.Entity.AlternateCategory, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Description</label>
                                @Html.TextAreaFor(x => x.Entity.Description, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <div class="form-group">
                                <div class="custom-control custom-checkbox">
                                    @Html.CheckBoxFor(x => x.Entity.IsFavorite, new { id = "customCheckbox1", @type = "checkbox", @class = "custom-control-input" })
                                    <label for="customCheckbox1" class="custom-control-label">Add to my Favorites list</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <a href="@Url.Action("Refresh")" class="btn btn-default">Cancel</a>
                            @if (Model.Entity.ID > 0)
                            {
                                <button id="btnDelete" type="button" class="btn btn-danger">
                                    Delete
                                </button>
                            }
                            <button type="submit" class="btn btn-info float-right">Save</button>
                        </div>
                    </div>
                }
            </div>
            <div class="tab-pane" id="sharing">
                <div class="row">
                    <div class="col-md-5">
                        <div class="card card-default">
                            <div class="card-header">
                                <h3 class="card-title">Can be Shared With</h3>
                            </div>
                            <div id="section-available-cooperators" class="card-body">
                                <table id="data-table-available-cooperators" class="table table-striped" style="width:100%;">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var result in Model.DataCollectionAvailableCooperators)
                                        {
                                            <tr>
                                                <td>
                                                    @result.ID
                                                </td>
                                                <td>
                                                    @result.FullName
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2" style="margin-top:5%;">
                        <button id="btnShare" class="btn btn-default btn-block" type="button">>></button>
                        <button id="btnUnShare" class="btn btn-default btn-block" type="button"><<</button>
                    </div>
                    <div class="col-md-5">
                        <div class="card card-success card-outline">
                            <div class="card-header">
                                <h3 class="card-title">Is Currently Shared With</h3>
                            </div>
                            <div id="section-current-collaborators" class="card-body">
                                <table id="data-table-current-cooperators" class="table table-striped" style="width:100%;">
                                    <thead>
                                        <tr>
                                            <th></th>
                                            <th>Name</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var result in Model.DataCollectionCurrentCooperators)
                                        {
                                            <tr>
                                                <td>
                                                    @result.ID
                                                </td>
                                                <td>
                                                    @result.FullName
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Views/Taxonomy/Shared/Modals/_Delete.cshtml")
@{ Html.RenderAction("_ListFolderItems", Model.Entity.FolderTypeDescription, new { @folderId = Model.Entity.ID, displayFormat="" });}
<script type="text/javascript">
    $(document).ready(function () {
        Init();
        InitDataTableLightMultiSelect("data-table-available-cooperators");
        InitDataTableLightMultiSelect("data-table-current-cooperators");
    });

    function Init() {
        var isReadOnly = $("#IsReadOnly").val();
        if (isReadOnly == "Y") {
            SetReadOnly();
        }
        /*GetAvailableCollaborators(1073);*/
    }

    $("#btnDelete").click(function () {
        var action = $(this).data("ggtools-action");
        $("#EventAction").val(action);
        $("#EventValue").val(
            $(this).data("ggtools-value"));
    });

    /*
    ==========================================================================================================
    FOLDER SHARING
    ==========================================================================================================
    */
    $('#section-folder-options ul.nav li').on('click', function () {
        var id = $(this).attr('id');
        if (id == "tab-folder-sharing") {
            var folderId = $("#Entity_ID").val();
            LoadAvailableCollaborators(folderId);
            LoadCurrentCollaborators(folderId);
        }
    });

    $("#btnShare").click(function () {
        var entityId = $("#Entity_ID").val();
        Share();
        LoadAvailableCollaborators(entityId);
        LoadCurrentCollaborators(entityId);
    });

    $("#btnUnShare").click(function () {
        var entityId = $("#Entity_ID").val();
        UnShare();
        LoadCurrentCollaborators(entityId);
        LoadAvailableCollaborators(entityId);
    });

    function Share() {
        var link = '@Url.Action("AddCollaborators","Folder")';
        var entityId = $("#Entity_ID").val();
        var selectedItemIdList = GetSelectedEntityIDs("data-table-available-cooperators");
        var formData = new FormData();

        formData.append("FolderID", entityId);
        formData.append("IDList", selectedItemIdList);

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            dataType: 'json',
            contentType: false,
            processData: false,
            data: formData,
            success: function (data) {
                /*console.log(data);*/
                /*ConfirmFolderSave(data.folder.FolderName);*/
            },
            error: function (ex) {
            }
        });
    }

    function UnShare() {
        var link = '@Url.Action("DeleteCollaborators","Folder")';
        var entityId = $("#Entity_ID").val();
        var selectedItemIdList = GetSelectedEntityIDs("data-table-current-cooperators");
        var formData = new FormData();

        formData.append("FolderID", entityId);
        formData.append("IDList", selectedItemIdList);

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            dataType: 'json',
            contentType: false,
            processData: false,
            data: formData,
            success: function (data) {
            },
            error: function (ex) {
            }
        });
    }

    function LoadAvailableCollaborators(folderId) {
        var link = '@Url.Action("_ListAvailableCollaborators","Folder")';
        var formData = new FormData();

        formData.append("FolderID", folderId);

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            contentType: false,
            processData: false,
            data: formData,
            success: function (response) {
                $("#section-available-cooperators").html(response);
            },
            error: function () {
                alert("Error loading available cooperators");
            }
        });
    }

    function LoadCurrentCollaborators(folderId) {
        var link = '@Url.Action("_ListCurrentCollaborators", "Folder")';
        var formData = new FormData();

        formData.append("FolderID", folderId);

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            contentType: false,
            processData: false,
            data: formData,
            success: function (response) {
                $("#section-current-collaborators").html(response);
            },
            error: function () {
                alert("Error loading current cooperators");
            }
        });
    }
</script>

