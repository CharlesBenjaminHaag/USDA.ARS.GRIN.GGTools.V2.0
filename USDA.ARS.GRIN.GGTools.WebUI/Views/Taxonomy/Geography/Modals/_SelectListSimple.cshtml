@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.GeographyViewModel
<table id="data-table-geography-lookup" class="table table-striped ggtools" style="width:100%">
    <thead>
        <tr>
            <th></th>
            <th>Extended Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.DataCollection.Count() > 0)
        {
            foreach (var result in Model.DataCollection)
            {
                <tr>
                    <td>
                        @result.ID
                    </td>
                    <td>@result.GeographyText</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">
                    <div class="callout callout-info" style="vertical-align:middle; margin-top:5px;">
                        Your search returned no matches.
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<script type="text/javascript">
    InitDataTableGeo("data-table-geography-lookup");

    function InitDataTableGeo(tableName) {
        $(document).ready(function () {
            tableName = "#" + tableName;
            table = $(tableName).DataTable({
                stateSave: true,
                paging: true,
                responsive: true,
                select: true,
                searching: true,
                "bInfo": false,
                columnDefs: [
                    { targets: [0], visible: false }
                ]
            });
            /*table.row(':eq(0)', { page: 'current' }).select();*/
        });
    }
</script>