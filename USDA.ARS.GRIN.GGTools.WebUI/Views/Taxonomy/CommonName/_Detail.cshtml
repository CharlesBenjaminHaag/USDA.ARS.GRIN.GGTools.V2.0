@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.CommonNameViewModelBase
<div id="section-folder-confirmation"></div>
@using (Html.BeginForm("Search", "CommonName", FormMethod.Post, new { id = "frmMain" }))
{
    @Html.HiddenFor(x => x.EventAction)
    @Html.HiddenFor(x => x.EventValue)
    @Html.HiddenFor(x => x.TableName)
    @Html.HiddenFor(x => x.TableCode)
    @Html.HiddenFor(x => x.PageTitle)
    @Html.HiddenFor(x => x.AuthenticatedUserCooperatorID)
    @Html.HiddenFor(x => x.ItemIDList)
    @Html.HiddenFor(x => x.DetailPartialViewName)
    @Html.HiddenFor(x => x.ListPartialViewName)


<div class="card">
    <div class="card-header p-2">
        <ul class="nav nav-pills">
            <li class="nav-item"><a class="nav-link active" href="#section-search-criteria" data-toggle="tab">Search Criteria</a></li>
            <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Saved Searches</a></li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content">
            <div class="tab-pane active" id="section-search-criteria">
                <div id="section-search-criteria">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Genus Name</label>
                                @Html.TextBoxFor(x => x.SearchEntity.GenusName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Species Name</label>
                                @Html.TextBoxFor(x => x.SearchEntity.SpeciesName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Common Name</label>
                                @Html.TextBoxFor(x => x.SearchEntity.Name, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Language Description</label>
                                @Html.TextBoxFor(x => x.SearchEntity.LanguageDescription, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Transcription</label>
                                @Html.TextBoxFor(x => x.SearchEntity.SimplifiedName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="form-group form-horizontal">
                                <label>Note</label>
                                @Html.TextBoxFor(x => x.SearchEntity.Note, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group form-horizontal">
                                <label>Citation</label>
                                @Html.TextBoxFor(x => x.SearchEntity.CitationText, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    @Html.Partial("~/Views/Taxonomy/CommonName/_DetailExtended.cshtml")
                    <div>
                        <button id="btnReset" type="button" class="btn btn-default">Reset</button>
                        <div class="btn-group float-right">
                            <button type="submit" class="btn btn-info">Search</button>
                            <button type="button" class="btn btn-info dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <div class="dropdown-menu" role="menu" style="">
                                <a id="btnOpenDynamicFolderModal" class="dropdown-item" href="#">Save Search</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="timeline">
                <div class="row">
                    <div class="col-md-12">
                        @{Html.RenderAction("_ListDynamic", "AppUserItemFolder", new { @cooperatorId = Model.AuthenticatedUserCooperatorID, @dataType = Model.TableName });}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Views/AppUserItemFolder/Modals/_EditDynamic.cshtml")
}
