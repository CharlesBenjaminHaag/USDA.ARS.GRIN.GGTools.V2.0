@model USDA.ARS.GRIN.GGTools.ViewModelLayer.SysUserViewModel
<div class="modal fade" id="modal-sys-user-edit">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 id="lblFolderEditModalTitle" class="modal-title">Add Sys User</h4>
            </div>
            <div class="modal-body">
                <form id="frmSysUser">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>User Name</label>
                                <input type="text" id="txtEditSysUserName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="text" id="txtEditSysUserPassword" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Confirm Password</label>
                                <input type="text" id="txtEditSysUserPasswordConfirmed" class="form-control" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <span class="input-group-btn">
                    <button type="button" id="btnCancel" data-dismiss="modal" class="btn btn-danger btn-flat">Cancel</button>
                    <button type="button" id="btnSubmitAddSysUser" class="btn btn-info btn-flat">Save</button>
                </span>
            </div>
        </div>
    </div>
</div>
