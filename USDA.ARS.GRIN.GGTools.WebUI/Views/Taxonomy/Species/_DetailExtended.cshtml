@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.SpeciesViewModelBase

<div class="card card-default card-outline collapsed-card">
    <div class="card-header">
        <h3 class="card-title">Extended Fields</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-plus"></i>
            </button>
        </div>
    </div>
    <div class="card-body p-3" style="display: none;">
        <div class="row">
            <div class="col-sm-1">
                <div class="form-group form-horizontal">
                    <label>ID</label>
                    @Html.TextBoxFor(x => x.SearchEntity.ID, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group form-horizontal">
                    <label>Created Date</label>
                    @Html.TextBoxFor(x => x.SearchEntity.CreatedDate, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group form-horizontal">
                    <label>Modified By</label>
                    @Html.DropDownListFor(x => x.SearchEntity.ModifiedByCooperatorID, Model.Cooperators, "All Cooperators", new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group form-horizontal">
                    <label>Modified Date</label>
                    @Html.TextBoxFor(x => x.SearchEntity.ModifiedDate, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group form-horizontal">
                    <label>Note</label>
                    @Html.TextBoxFor(x => x.SearchEntity.Note, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-1">
                <div class="form-group form-horizontal">
                    <label>Current ID</label>
                    @Html.TextBoxFor(x => x.SearchEntity.AcceptedNameID, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-1">
                <div class="form-group form-horizontal">
                    <label>Nomen Number</label>
                    @Html.TextBoxFor(x => x.SearchEntity.ID, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group form-horizontal">
                    <label>Epithet</label>
                    @Html.TextBoxFor(x => x.SearchEntity.SpeciesName, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group form-horizontal">
                    <label>Alternate Name</label>
                    @Html.TextBoxFor(x => x.SearchEntity.AlternateName, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group form-horizontal">
                    <label>Has Verified Date</label>
                    @Html.DropDownListFor(x => x.SearchEntity.IsNameVerifiedDateOption, Model.YesNoOptions, "Either", new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group form-horizontal">
                    <label>Protologue</label>
                    @Html.TextBoxFor(x => x.SearchEntity.Protologue, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group form-horizontal">
                    <label>Protologue Virtual Path</label>
                    @Html.TextBoxFor(x => x.SearchEntity.ProtologueVirtualPath, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group form-horizontal">
                    <label>Species Authority</label>
                    @Html.TextBoxFor(x => x.SearchEntity.SpeciesAuthority, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group form-horizontal">
                    <label>Subspecies Name</label>
                    @Html.TextBoxFor(x => x.SearchEntity.SubspeciesName, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group form-horizontal">
                    <label>Subspecies Authority</label>
                    @Html.TextBoxFor(x => x.SearchEntity.SubspeciesAuthority, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group form-horizontal">
                    <label>Is Subsp. Hybrid</label>
                    @Html.DropDownListFor(x => x.SearchEntity.IsSubSpecificHybridOption, Model.YesNoOptions, "Either", new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group form-horizontal">
                    <label>Variety Name</label>
                    @Html.TextBoxFor(x => x.SearchEntity.VarietyName, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group form-horizontal">
                    <label>Variety Authority</label>
                    @Html.TextBoxFor(x => x.SearchEntity.VarietyAuthority, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group form-horizontal">
                    <label>Is Var. Hybrid</label>
                    @Html.DropDownListFor(x => x.SearchEntity.IsVarietalHybridOption, Model.YesNoOptions, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group form-horizontal">
                    <label>Forma Name</label>
                    @Html.TextBoxFor(x => x.SearchEntity.FormaName, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group form-horizontal">
                    <label>Forma Authority</label>
                    @Html.TextBoxFor(x => x.SearchEntity.FormaAuthority, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group form-horizontal">
                    <label>Is Forma Hybrid</label>
                    @Html.DropDownListFor(x => x.SearchEntity.IsVarietalHybridOption, Model.YesNoOptions, "Either", new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-2">
                <div class="form-group form-horizontal">
                    <label>Forma Rank Type</label>
                    @Html.DropDownListFor(x => x.SearchEntity.FormaRankType, Model.FormaRankTypes, "All types", new { @class = "form-control" })
                </div>
            </div>
            <div class="col-sm-3">
                <div class="form-group form-horizontal">
                    <label>Hybrid Parentage</label>
                    @Html.TextBoxFor(x => x.SearchEntity.HybridParentage, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
</div>

