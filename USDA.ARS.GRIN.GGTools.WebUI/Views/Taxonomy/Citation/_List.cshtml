@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.CitationViewModel
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Citations (@Model.DataCollection.Count)</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <div id="section-search-results" class="data-list">
            <table id="data-table-citations" class="table table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th width="5%">ID</th>
                        <th>Taxon Name</th>
                        <th>Abbrev. Lit. Source</th>
                        <th>Title</th>
                        <th>Year</th>
                        <th>Author</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.DataCollection != null)
                    {
                        if (Model.DataCollection.Count() > 0)
                        {
                            foreach (var result in Model.DataCollection)
                            {
                                <tr>
                                    <td>
                                        @result.ID
                                    </td>
                                    <td>
                                        @result.ID
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", result.TaxonTitle, new { entityId = result.TaxonID })">
                                            @result.TaxonName
                                        </a>
                                    </td>
                                    <td>
                                        @result.Abbreviation
                                    </td>
                                    <td>
                                        @Html.Raw(result.DisplayTitle)
                                    </td>
                                    <td>
                                        @result.CitationYear
                                    </td>
                                    <td>
                                        @result.DisplayAuthorName
                                    </td>
                                    <td style="text-align:right;">
                                        <a href="@Url.Action("Edit", "Citation", new { entityId = result.ID })" class="btn btn-default btn-sm pull-right row-edit">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        @*@if (Model.Action == "Folder")
                                            {
                                                <button id="btnDeleteFolderItem_@cropForCWR.ReferenceID" class="btn btn-danger btn-sm pull-right row-edit margin-r-5">
                                                    <i class="fa fa-trash"></i> Remove From Folder
                                                </button>
                                            }*@
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        Init();
        InitDataTable("data-table-citations");
    });
</script>
