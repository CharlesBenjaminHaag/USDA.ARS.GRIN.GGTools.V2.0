@model USDA.ARS.GRIN.GGTools.ViewModelLayer.CodeValueViewModel
<div id="section-search-results" class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Code Values (@Model.DataCollection.Count)</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <table id="data-table-code-values" class="table table-striped ggtools-table">
            <thead>
                <tr>
                    <th></th>
                    <th>Group Name</th>
                    <th>Code Value ID</th>
                    <th>Code</th>
                    <th>Code Value Lang ID</th>
                    <th>Title</th>
                    <th>Created</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.DataCollection.Count() > 0)
                {
                    foreach (var result in Model.DataCollection)
                    {
                        <tr>
                            <td>
                                @result.ID
                            </td>
                            <td>@Html.Raw(result.GroupName)</td>
                            <td>@result.CodeValueID</td>
                            <td>@result.Code</td>
                            <td>@result.CodeValueLangID</td>
                            <td>
                                @result.CodeTitle
                            </td>
                            <td>@result.CreatedDate.ToShortDateString()</td>
                            <td class="table-col-align-right">
                                <a href="@Url.Action("Edit", "CodeValue", new { entityId = result.CodeValueID })" class="btn btn-primary btn-sm pull-right row-edit">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        InitDataTable("data-table-code-values");
    });
</script>