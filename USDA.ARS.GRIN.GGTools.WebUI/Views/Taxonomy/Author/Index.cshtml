@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.AuthorViewModel
@{
    ViewBag.Title = Model.PageTitle;
    Layout = "~/Views/Shared/_LayoutAdminLTE3.cshtml";
}
@Html.Partial("~/Views/Taxonomy/Author/_Detail.cshtml")
@Html.Partial("~/Views/Taxonomy/Author/_List.cshtml")
@{Html.RenderAction("_Edit", "Folder", new { @tableName = "taxonomy_author" }); }

<script type="text/javascript">

    $(document).ready(function () {
        Init();
        SetExtendedFields();
    });

    function Init() {
        var eventAction = $("#EventAction").val();
        if (eventAction == "SHOW-SEARCH") {
            $("#section-search-criteria").show();
        }
    }

    $(document).on("click", "[id='btnSubmitSearch']", function () {
        event.preventDefault();
        if ($("#section-search-criteria").is(":visible")) {
            $("#EventAction").val("SHOW-SEARCH");
        }
        $("#frmMain").submit();
    });

    $(document).on("click", "[id='btnReset']", function () {
        Reset();
    });

    
</script>