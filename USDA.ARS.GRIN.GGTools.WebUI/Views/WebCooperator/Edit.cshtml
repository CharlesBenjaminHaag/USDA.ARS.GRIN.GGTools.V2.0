@model USDA.ARS.GRIN.GGTools.ViewModelLayer.WebCooperatorViewModel
@{
    ViewBag.Title = Model.PageTitle;
    Layout = "~/Views/Shared/_LayoutAdminLTE.cshtml";
}

<style>
    .row {
        margin-top: 5px;
    }
</style>

<div class="row">
    @if (Model.Entity.ID > 0)
    {
        <div class="col-md-3">
            <div id="section-sys-user-widget">
