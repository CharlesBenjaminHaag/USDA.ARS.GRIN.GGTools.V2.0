@model USDA.ARS.GRIN.GGTools.ViewModelLayer.SysUserViewModel
<div class="modal fade" id="modal-sys-user-edit">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 id="lblFolderEditModalTitle" class="modal-title">Add Sys User</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("_Save", "SysUser", FormMethod.Post, new { id = "frmEditSysUser" }))
                {
                    @Html.HiddenFor(x=>x.Entity.SysUserID)
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>User Name</label>
                                @Html.TextBoxFor(x=>x.Entity.UserName, new { @class="form-control" })
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                @Html.TextBoxFor(x => x.Entity.Password, new { @class = "form-control", @type="text" })
                            </div>
                            <div class="form-group">
                                <label>Confirm Password</label>
                                @Html.TextBoxFor(x => x.Entity.PasswordConfirm, new { @class = "form-control", @type = "text" })
                            </div>
                        </div>
                    </div>
                }
                </div>
            <div class="modal-footer">
                <span class="input-group-btn">
                    <button type="button" id="btnCancel" data-dismiss="modal" class="btn btn-danger btn-flat">Cancel</button>
                    <button type="button" id="btnSaveSysUser" class="btn btn-info btn-flat" data-dismiss="modal">Save</button>
                </span>
            </div>
        </div>
    </div>
</div>
