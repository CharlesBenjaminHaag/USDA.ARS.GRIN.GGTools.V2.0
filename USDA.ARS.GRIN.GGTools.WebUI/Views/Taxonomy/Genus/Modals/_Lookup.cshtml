<div class="modal fade" id="modal-genus-lookup" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    <i class="fas fa-search"></i>
                    Genus Lookup
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div id="section-search-criteria" class="modal-body">
                <input type="hidden" id="hfGenusLookupIDFieldName" />
                <input type="hidden" id="hfGenusLookupNameFieldName" />
                <div class="row">
                    <div class="col-md-12">
                        <label>Name</label>
                        <input type="text" id="txtLookupGenusName" class="form-control" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="margin">
                            <div class="form-group clearfix">
                                <div class="icheck-primary d-inline">
                                    <input class="custom-control-input" type="checkbox" id="cbxLookupIsAcceptedName" value="option1">
                                    <label for="cbxLookupIsAcceptedName">
                                        Search accepted names only.
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="margin">
                            <button id="btnReset" class="btn btn-danger">Reset</button>
                            <button id="btnLookupGenus" class="btn btn-default float-right">Search</button>
                        </div>                    
                    </div>
                </div>
                <div id="section-genus-lookup-search-results">

                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button id="btnSaveGenus" type="button" class="btn btn-info" data-dismiss="modal">Add Selected Genus</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $("#btnOpenGenusLookupModal").click(function () {
        var eventAction = $(this).data("ggtools-action");
        var eventValue = $(this).data("ggtools-value");
        $("#hfGenusLookupIDFieldName").val(eventAction);
        $("#hfGenusLookupNameFieldName").val(eventValue);
        //DEBUG
        alert("DEBUG GENUS ID FIELD " + eventAction + " AND NAME FIELD " + eventValue);
    });

    $("#btnLookupGenus").click(function () {
        SearchGenus();
    });

    $("#btnSaveGenus").click(function () {
        var idField = $("#hfGenusLookupIDFieldName").val();
        var nameField = $("#hfGenusLookupNameFieldName").val();
        var idList = GetSelectedEntityIDs("data-table-genus-lookup");
        var nameList = GetSelectedEntityLabels("data-table-genus-lookup");

        $("#Entity_" + idField).val(idList);
        $("#Entity_" + nameField).val(nameList);
        $('#modal-genus-lookup').modal('hide');
    });

    function SearchGenus() {
        var link = '@Url.Action("Lookup","Genus")';
        var genusName = $("#txtLookupGenusName").val();
        var formData = new FormData();

        formData.append("GenusName", genusName);
        if ($("#cbxLookupIsAcceptedName").is(":checked")) {
            formData.append("IsAcceptedName", "Y");
        }
        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            contentType: false,
            processData: false,
            data: formData,
            success: function (response) {
                $("#section-genus-lookup-search-results").html(response);
            },
            error: function () {
                alert("Error");
            }
        });
    }

    function SelectGenus(ID, genusName) {
        var eventAction = "";
        var eventValue = "";

        $('#modal-genus-lookup').modal('hide');


        eventValue = $("#hfModalEventValue").val();
        if (eventValue == 'SPECIES') {
            $("#Entity_GenusName").val(genusName);
        }
        else {
            $("#Entity_AcceptedID").val(ID);
            $("#Entity_AcceptedName").val(genusName);
        }
    }
</script>


