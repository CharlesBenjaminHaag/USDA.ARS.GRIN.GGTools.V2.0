                    </div>
                    @using (Html.BeginForm("Search", "Species", FormMethod.Post, new { id = "frmMain" }))
                    {
                        <div class="row">
                            <div class="col-sm-2">
                                <div class="form-group">
                                    <label>Created By</label>
                                    @Html.DropDownListFor(x => x.SearchEntity.CreatedByCooperatorID, Model.Cooperators, "All Cooperators", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label>Name</label>
                                    @Html.TextBoxFor(x => x.SearchEntity.SpeciesName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-1">
                                <label>Accepted</label>
                                @Html.DropDownListFor(x => x.SearchEntity.IsAcceptedName, Model.YesNoOptions, "Either", new { @class = "form-control" })
                            </div>
                            <div class="col-md-3">
                                <div class="form-group form-horizontal">
                                    <label>Synonym Code</label>
                                    @Html.DropDownListFor(x => x.SearchEntity.SynonymCode, Model.SynonymCodes, "All Codes", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        @Html.Partial("~/Views/Taxonomy/Species/_DetailExtended.cshtml")
                    }
                </div>
                <div>
                    <button id="btnReset" type="button" class="btn btn-danger">Reset</button>
                    <div class="btn-group float-right">
                        <button id="btnSearch" type="submit" class="btn btn-info">Search</button>
                        <button type="button" class="btn btn-info dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu" role="menu" style="">
                            <a id="btnSaveSearch" class="dropdown-item" href="#">Save Search</a>
                        </div>
                    </div>
                </div>
