@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.RegulationViewModel

<div id="section-search-results" class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Regulations (@Model.DataCollection.Count)</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <table id="data-table-regulations" class="table table-striped" style=" width:100%;">
            <thead>
                <tr>
                    <th></th>
                    <th width="5%">ID</th>
                    <th>Geography</th>
                    <th>Type</th>
                    <th>Level</th>
                    <th>Description</th>
                    <th>Last Modified</th>
                    <th>Modified By</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.DataCollection != null)
                {
                    if (Model.DataCollection.Count() > 0)
                    {
                        foreach (var result in Model.DataCollection)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" class="form-check-input" style="position: absolute; opacity:1;" id="@result.ID">
                                </td>
                                <td>
                                    @result.ID
                                </td>
                                <td>@result.GeographyDescription</td>
                                <td>@result.RegulationTypeDescription</td>
                                <td>@result.RegulationLevelDescription</td>
                                <td>@result.Description</td>
                                <td>
                                    @if (result.ModifiedDate > DateTime.MinValue)
                                    {
                                        @result.ModifiedDate.ToShortDateString()
                                    }
                                </td>
                                <td>
                                    @result.ModifiedByCooperatorName
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "Regulation", new { entityId = result.ID })" class="btn btn-primary btn-sm pull-right row-edit">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    @*@if (Model.Action == "Folder")
                                        {
                                            <button id="btnDeleteFolderItem_@cropForCWR.ReferenceID" class="btn btn-danger btn-sm pull-right row-edit margin-r-5">
                                                <i class="fa fa-trash"></i> Remove From Folder
                                            </button>
                                        }*@
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        Init();
        InitDataTable("data-table-regulations");
    });
</script>