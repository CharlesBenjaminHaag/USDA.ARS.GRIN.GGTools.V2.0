@model USDA.ARS.GRIN.GGTools.ViewModelLayer.FolderViewModel
<div class="modal fade" id="modal-folder-edit" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    <i class="fas fa-search"></i>
                    Folder
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li id="btnSelectCreateFolder" class="nav-item"><a class="nav-link active" href="#folder-create" data-toggle="tab">Create Folder</a></li>
                            <li id="btnSelectUpdateFolder" class="nav-item"><a class="nav-link" href="#folder-select" data-toggle="tab">Select Folder</a></li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="folder-create">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Name</label>
                                            <input type="text" id="txtFolderTitle" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>Category</label>
                                                        @Html.DropDownListFor(x => x.Entity.Category, Model.Categories, "Select value", new { @class = "form-control" })
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <label>Add Category</label>
                                                    <input type="text" id="txtFolderNewCategory" class="form-control">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label>Description</label>
                                            <textarea id="txtFolderDescription" class="form-control" rows="3"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <div class="input-group">
                                                <input type="text" disabled="" readonly class="form-control" value="Add to Favorites">
                                                <span class="input-group-addon">
                                                    <input id="cbxIsFavorite" type="checkbox" checked="checked">
                                                </span>
                                            </div>
                                            <div class="input-group">
                                                <input type="text" disabled="" readonly class="form-control" value="Share folder">
                                                <span class="input-group-addon">
                                                    <input id="cbxIsShared" type="checkbox">
                                                </span>
                                            </div>

                                            <div id="section-folder-sharing" style="display:none; margin-top:20px;">
                                                <label>Share With User(s):</label>
                                                <div class="form-group">
                                                    <div class="input-group">
                                                        <span class="input-group-addon">
                                                            <input id="cbxIsFavorite" type="checkbox">
                                                        </span>
                                                        <input type="text" disabled="" readonly class="form-control" value="Leon, Blanca">
                                                    </div>
                                                    <div class="input-group">
                                                        <span class="input-group-addon">
                                                            <input id="cbxIsFavorite" type="checkbox">
                                                        </span>
                                                        <input type="text" disabled="" readonly class="form-control" value="Friedman, Jennifer">
                                                    </div>
                                                    <div class="input-group">
                                                        <span class="input-group-addon">
                                                            <input id="cbxIsFavorite" type="checkbox">
                                                        </span>
                                                        <input type="text" disabled="" readonly class="form-control" value="Schori, Melanie">
                                                    </div>
                                                    <div class="input-group">
                                                        <span class="input-group-addon">
                                                            <input id="cbxIsFavorite" type="checkbox">
                                                        </span>
                                                        <input type="text" disabled="" readonly class="form-control" value="Wiertsma, John">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <button id="btnAddFolder" class="btn btn-primary float-right">Save</button>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-pane" id="folder-select">
                                <div class="row">
                                    <div id="section-folder-list" class="col-md-12">
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <button id="btnUpdateFolder" class="btn btn-primary margin-top-10">Add Records to Selected Folder</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        InitDataTableLight("data-table-user-folders");
    });

    $("#btnSelectUpdateFolder").click(function () {
        GetUserFolders();
    });

    $("#btnOpenFolderModal").click(function () {
        $("#modal-folder-edit").modal("show");
    });

    $("#btnAddFolder").click(function () {
        AddFolder(0);
    });

    $("#btnUpdateFolder").click(function () {
        UpdateFolder();
    });

    function GetUserFolders() {
        var link = '@Url.Action("_List", "Folder")';
        var tableName = $("#TableName").val();
        var formData = new FormData();

        formData.append("FolderType", tableName);

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            contentType: false,
            processData: false,
            data: formData,
            success: function (response) {
                $("#section-folder-list").html(response);
            },
            error: function () {
                alert("Error");
            }
        });
    }

    /*
     * Adds a batch of selected items to an existing folder
     */
    function UpdateFolder() {
        var link = '@Url.Action("Update", "Folder")';
        var tableName = $("#TableName").val();
        var dataTableName = "data_table_" + tableName;
        var selectedItemIdList = GetSelectedEntityIDs(dataTableName);
        var folderId = GetSelectedEntityIDs("data-table-folder-list");
        var formData = new FormData();

        formData.append("IDList", selectedItemIdList);
        formData.append("FolderID", folderId);
        formData.append("TableName", tableName);

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            dataType: 'json',
            contentType: false,
            processData: false,
            data: formData,
            success: function (data) {
                /*console.log(data);*/
                /*ConfirmFolderSave(data.folder.FolderName);*/
            },
            error: function (ex) {
            }
        });
        $("#modal-folder-edit").modal("hide");
    }

    /*
     * Adds a batch of items to a newly-created folder
    */
    function AddFolder(folderId) {
        var link = '@Url.Action("Add", "Folder")';
        var tableName = $("#TableName").val();
        var dataTableName = "data_table_" + tableName;
        var folderName = $("#txtFolderTitle").val();
        var folderCategory = $("#Entity_Category").val();
        var folderNewCategory = $("#txtFolderNewCategory").val();
        var folderDescription = $("#txtFolderDescription").val();
        var selectedItemIdList = GetSelectedEntityIDs(dataTableName);
        var formData = new FormData();

        if ($('#cbxIsFavorite').prop('checked') == true) {
            isFavorite = true;
        }

        //DEBUG
        alert("DEBUG ID LIST " + selectedItemIdList + " TABLE " + dataTableName);

        if (typeof selectedItemIdList != 'undefined') {
            formData.append("IDList", selectedItemIdList);
        }

        if ($('#cbxIsFavorite').prop('checked') == true) {
            formData.append("IsFavorite", true);
        }

        if ($('#cbxIsShared').prop('checked') == true) {
            formData.append("IsShared", true);
        }

        formData.append("FolderID", folderId);
        formData.append("TableName", tableName);
        formData.append("FolderName", folderName);
        formData.append("FolderType", tableName);
        formData.append("Category", folderCategory);
        formData.append("NewCategory", folderNewCategory);
        formData.append("Description", folderDescription);

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            dataType: 'json',
            contentType: false,
            processData: false,
            data: formData,
            success: function (data) {
                //TODO CONFIRM
            },
            error: function (ex) {
            }
        });
        $("#modal-folder-edit").modal("hide");
    }

    function ConfirmFolderSave(folderTitle) {
        $("#new-folder-name").html(folderTitle);
        $("#alert-folder-confirmation").show();
    }

    function SaveFolderItems(folderId) {
        var link = '@Url.Action("AddItems", "Folder")';
        var tableName = $("#TableName").val();
        var selectedItemIdList = GetSelectedEntityIDs("data-table-order");
        var formData = new FormData();

        formData.append("FolderID", folderId);
        formData.append("TableName", tableName);

        if (typeof selectedItemIdList != 'undefined') {
            formData.append("IDList", selectedItemIdList);
        }

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            contentType: false,
            processData: false,
            data: formData,
            success: function (result) {
            },
            error: function () {
                alert("Error");
            }
        });
        $("#modal-folder-edit").modal("hide");
    }
</script>

