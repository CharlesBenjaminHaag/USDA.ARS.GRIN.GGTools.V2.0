@model USDA.ARS.GRIN.GGTools.ViewModelLayer.AppUserItemFolderViewModel
<div class="row">
    <div class="col-md-4">
        <div class="info-box shadow">
            <span class="info-box-icon bg-info"><i class="far fa-folder"></i></span>
            <div class="info-box-content">
                <span class="info-box-text">
                    @if (Model.Entity.IsFavorite == "Y")
                    {
                        <i class="fas fa-star text-warning"></i>
                    }
                    
                        <a href="@Url.Action("Edit", "AppUserItemFolder", new { @entityId = Model.Entity.ID })">
                            @Model.Entity.FolderName
                        </a>
                    
                </span>
                <span class="info-box-number">Created @Model.Entity.CreatedDate.ToShortDateString() 
                    @*<span class="badge badge-secondary float-right">@Model.Entity.TotalItems items</span>*@
                    <button class="btn btn-sm btn-flat btn-danger float-right">Remove From Folder</button>
                </span>
            </div>
        </div>
    </div>
</div>

