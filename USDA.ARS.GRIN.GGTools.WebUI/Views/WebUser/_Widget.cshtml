@model USDA.ARS.GRIN.GGTools.ViewModelLayer.WebUserViewModel

<style type="text/css">
    .profile-username {
        text-overflow: ellipsis;
    }
</style>


@if (Model.Entity.ID > 0)
{
    @Html.HiddenFor(x => x.Entity.ID)
    <div class="box box-default">
        <div class="box-header with-border">
            <i class="fa fa-user"></i>
            <h3 class="box-title">Web User</h3>
        </div>
        <div class="box-body">
            <img class="profile-user-img img-responsive img-circle" src="https://npgsweb.ars-grin.gov/gringlobal/images/admin/user-default.png" alt=@Model.Entity.WebUserName>
            <h3 class="profile-username text-center">@Model.Entity.WebUserName</h3>
            <p style="border-bottom: 1px solid #ddd; padding-bottom: 15px;" class="text-muted text-center">
            </p>
            <strong><i class="fa fa-calendar margin-r-5"></i> Created</strong>
            <p style="border-bottom: 1px solid #ddd; padding-bottom: 5px;" class="text-muted">
                @Model.Entity.CreatedDate
            </p>

            @if (Model.Entity.ModifiedDate > DateTime.MinValue)
            {
                <strong><i class="fa fa-calendar margin-r-5"></i> Last Modified</strong>
                <p style="border-bottom: 1px solid #ddd; padding-bottom: 5px;" class="text-muted">
                    @Model.Entity.ModifiedDate
                </p>
            }
        </div>
    </div>
}
else
{
    <div class="alert alert-warning alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h4><i class="icon fa fa-warning"></i> No User Account</h4>
        There is no user account linked to this cooperator.
        <button class="btn btn-outline btn-block" style="margin-top:15px;" data-toggle="modal" data-target="#modal-sys-user-edit">Create</button>
    </div>
}