        LoadSite(this.value);
    });

    function LoadSite(siteId) {
        link = '@Url.Action("GetSite", "Account")';
        var formData = new FormData();

        formData.append("entityId", siteId);

        $.ajax({
        url: link,
        type: 'POST',
        cache: false,
        contentType: false,
        processData: false,
        data: formData,
        success: function (response) {
            //DEBUG
            alert("DEBUG: " + response);

            $("#section-site-address").html(response);
        }
        });
