@model USDA.ARS.GRIN.GGTools.ViewModelLayer.WebOrderRequestViewModel
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-filter"></i>
            Current Status
        </h3>
    </div>
    <div class="card-body">
        <div id="section-current-status">
            @foreach (var result in Model.WebOrderRequestStatuses)
            {
                <label class="button-checkbox">
                    <input id="filter-most-recent-action-@result.Value" type="checkbox" />
                    <span>@result.Text</span>
                </label>
            }
        </div>
    </div>
</div>

<script type="text/javascript">
    function CurrentStatusFilter_GetSelectedValues() {
        var valueArray = [];
        $("#section-current-status input:checked").each(function () {
            var id = $(this).attr("id");
            valueArray.push(id);
        });
        return valueArray;
    }
</script>