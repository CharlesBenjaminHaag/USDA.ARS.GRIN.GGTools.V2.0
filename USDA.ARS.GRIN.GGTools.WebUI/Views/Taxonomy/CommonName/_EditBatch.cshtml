@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.CommonNameViewModel
@using (Ajax.BeginForm("BatchEdit", "CommonName", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "tab-content-taxonomy-commmon-name", InsertionMode = InsertionMode.Replace }, new { @id = "frmCommonNameBatchEdit" }))
{
    @Html.HiddenFor(x => Model.EventAction)
    @Html.HiddenFor(x => Model.EventValue)
    @Html.HiddenFor(x => Model.SpeciesIDList)
    @Html.Partial("~/Views/Shared/_ValidationMessages.cshtml")
    <div class="card card-primary collapsed-card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-leaf"></i> Common Name</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-plus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">


            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Name</label>
                        @Html.TextBoxFor(x => x.Entity.Name, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Simplified Name</label>
                        @Html.TextBoxFor(x => x.Entity.SimplifiedName, new { @class = "form-control", @readonly = "readonly", @style = "background-color:#ebebeb" })
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Transcription</label>
                        @Html.TextBoxFor(x => x.Entity.AlternateTranscription, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Language Description</label>
                        @Html.TextBoxFor(x => x.Entity.LanguageDescription, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Language</label>
                        @Html.DropDownListFor(x => x.Entity.LanguageID, Model.CommonNameLanguages, "NULL", new { @id = "ddlLanguage", @class = "form-control" })
                    </div>
                </div>
            </div>
            <table id="data_table_taxonomy_common_name" class="table table-striped ggtools-table" style="width:100%;">
                <thead>
                    <tr>
                        <th></th>
                        <th width="5%">ID</th>
                        <th>Name</th>
                        <th>Genus</th>
                        <th>Species</th>
                        <th>Language</th>
                        <th>Citation</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.DataCollection != null)
                    {
                        if (Model.DataCollection.Count() > 0)
                        {
                            foreach (var result in Model.DataCollection)
                            {
                                <tr>
                                    <td>
                                        @result.ID
                                    </td>
                                    <td>
                                        <span class="label label-default">
                                            @result.ID
                                        </span>
                                    </td>
                                    <td>@result.Name</td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Genus", new { entityId = result.GenusID })">@Html.Raw(result.GenusName)</a>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Species", new { entityId = result.SpeciesID })">@Html.Raw(result.SpeciesName)</a>
                                    </td>
                                    <td>@result.LanguageDescription</td>
                                    <td>@result.CitationID</td>
                                    <td style="text-align:right;">
                                    </td>
                                    <td style="text-align:right;">
                                        <a href="@Url.Action("Edit", "CommonName", new { entityId = result.ID })" class="btn btn-default btn-sm pull-right row-edit">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                        @if (Model.EventAction == "FOLDER")
                                        {
                                            <a href="@Url.Action("DeleteItem", "Folder", new { @folderId = result.FolderID, @appUserItemListId = result.AppUserItemListID })"
                                               class="btn btn-danger btn-sm float-right row-edit margin-r-5">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <button id="btnGenerateCommonNames" class="btn btn-default btn-block btn-flat float-right">Generate For Selected Species <i class="fas fa-fast-forward"></i></button>
        </div>
    </div>
}
<script type="text/javascript">
    $(document).ready(function () {
        InitDataTable("data_table_taxonomy_common_name");
    });

    $("#btnGenerateCommonNames").on('click', function (event) {
        var selectedSpeciesIdList = GetSelectedEntityIDs("data-table-species-lookup");
        $("#SpeciesIDList").val(selectedSpeciesIdList);
    });
</script>















