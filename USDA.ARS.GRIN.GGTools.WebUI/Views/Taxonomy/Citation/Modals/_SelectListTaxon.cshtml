@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.CitationViewModelBase
<br />
<div class="row">
    <div class="col-md-12">
        <button id="btnSaveSelectedTaxonCitationTop" type="button" class="btn btn-info float-right" data-dismiss="modal">Use Selected Citation</button>
    </div>
</div>
<br />
<table id="data_table_lookup_taxon_citations" class="table table-striped" style="margin-top:25px; width:100%;">
    <thead>
        <tr>
            <th></th>
            <th width="5%">ID</th>
            <th>Taxon</th>
            <th>Text</th>
            <th>Type</th>
            <th>Abbreviation</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.DataCollectionTaxon != null)
        {
            if (Model.DataCollectionTaxon.Count() > 0)
            {
                foreach (var result in Model.DataCollectionTaxon)
                {
                    <tr>
                        <td>@result.ID</td>
                        <td>
                            @result.ID
                        </td>
                        <td>
                            @result.TaxonName
                        </td>
                        <td>
                            @Html.Raw(result.CitationText)
                        </td>
                        <td>@result.TypeCode</td>
                        <td>@result.Abbreviation</td>
                    </tr>
            }
        }
    }
    </tbody>
</table>
<br />
<div class="row">
    <div class="col-md-12">
        <button id="btnSaveSelectedTaxonCitation" type="button" class="btn btn-info float-right" data-dismiss="modal">Use Selected Citation</button>
    </div>
</div>
<script type="text/javascript">
    InitDataTableLight('data_table_lookup_taxon_citations');
</script>
