@model USDA.ARS.GRIN.GGTools.ViewModelLayer.OrderRequestViewModel

<div class="card">
    <div class="card-header p-2">
        <ul class="nav nav-pills">
            <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Search Criteria</a></li>
            <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Saved Searches</a></li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content">
            <div class="tab-pane active" id="activity">
                <div id="section-search-criteria" class="row">
                    <div class="col-md-1">
                        <div class="form-group form-horizontal">
                            <label>ID</label>
                            @Html.TextBoxFor(x => x.SearchEntity.ID, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-1">
                        <div class="form-group form-horizontal">
                            <label>WOR ID</label>
                            @Html.TextBoxFor(x => x.SearchEntity.WebOrderRequestID, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group form-horizontal">
                            <label>Order Type</label>
                            @Html.DropDownListFor(x => x.SearchEntity.OrderTypeCode, Model.OrderRequestTypeCodes, "All Types", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group form-horizontal">
                            <label>Last Action</label>
                            @Html.DropDownListFor(x => x.SearchEntity.MostRecentOrderActionCode, Model.OrderRequestActionCodes, "All Actions", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group form-horizontal">
                            <label>Requestor Name</label>
                            @Html.TextBoxFor(x => x.SearchEntity.RequestorCooperatorName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group form-horizontal">
                            <label>Requestor Email</label>
                            @Html.TextBoxFor(x => x.SearchEntity.RequestorEmailAddress, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group form-horizontal">
                            <label>Requestor Organization</label>
                            @Html.TextBoxFor(x => x.SearchEntity.RequestorOrganizationName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group form-horizontal">
                            <label>Ship-To Name</label>
                            @Html.TextBoxFor(x => x.SearchEntity.ShipToCooperatorName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group form-horizontal">
                            <label>Final Recipient Name</label>
                            @Html.TextBoxFor(x => x.SearchEntity.FinalRecipientCooperatorName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group form-horizontal">
                            <label>Calendar Year</label>
                            @Html.TextBoxFor(x => x.SearchEntity.OrderedYear, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group form-horizontal">
                            <label>Time Frame</label>
                            @Html.DropDownListFor(x => x.SearchEntity.OrderedDateTimeFrame, Model.TimeFrameOptions, "Any time period", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group form-horizontal">
                            <label>Intended Use</label>
                            @Html.DropDownListFor(x => x.SearchEntity.IntendedUseCode, Model.IntendedUseCodes, "All codes", new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                <div>
                    <button id="btnReset" type="button" class="btn btn-default">Reset</button>
                    <div class="btn-group float-right">
                        <button type="submit" class="btn btn-default">Search</button>
                        <button type="button" class="btn btn-default dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu" role="menu" style="">
                            <a id="btnOpenSaveSearchModalh" class="dropdown-item" href="#">Save Search</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="timeline">
                <div class="row">
                    <div class="col-md-12">

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
