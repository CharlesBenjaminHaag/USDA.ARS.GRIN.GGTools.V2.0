@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.FamilyMapViewModelBase
<div class="card">
    <div class="card-header p-2">
        <ul class="nav nav-pills">
            <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Search Criteria</a></li>
            <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Saved Searches</a></li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content">
            <div class="tab-pane active" id="activity">
                <div id="section-search-criteria">
                    <div class="margin" style="margin-bottom:10px;">
                        <div class="btn-group">
                            <a class="btn btn-default btn-sm" href="@Url.Action("Add","Family", new { rank = "family" })"><i class="fa fa-book"></i> New</a>
                        </div>
                        <div class="btn-group">
                            <button id="btnOpenFolderModal" type="button" class="btn btn-default btn-sm"><i class="fa fa-folder"></i></button>
                        </div>
                        @*<div class="btn-group">
                            <button id="btnOpenCitationModal" type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#modal-citation-lookup">
                                <i class="fa fa-book"></i>
                            </button>
                        </div>*@
                    </div>
                    @using (Html.BeginForm("Search", "Family", FormMethod.Post, new { id = "frmMain" }))
                    {
                        <div class="row">
                            <div class="col-md-12">
                                <div class="tab-pane active" id="section-family">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <div class="form-group form-horizontal">
                                                <label>Created By</label>
                                                @Html.DropDownListFor(x => x.SearchEntity.CreatedByCooperatorID, Model.Cooperators, "All Cooperators", new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div id="section-family-name" class="form-group form-horizontal">
                                                <label>Order Name</label>
                                                @Html.TextBoxFor(x => x.SearchEntity.OrderName, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div id="section-family-name" class="form-group form-horizontal">
                                                <label>Family Name</label>
                                                @Html.TextBoxFor(x => x.SearchEntity.FamilyName, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-1">
                                            <label>Accepted</label>
                                            @Html.DropDownListFor(x => x.SearchEntity.IsAcceptedName, Model.YesNoOptions, "Either", new { @class = "form-control" })
                                        </div>
                                        <div class="col-md-3">
                                            <div id="section-family-type" class="form-group form-horizontal">
                                                <label>Type</label>
                                                @Html.DropDownListFor(x => x.SearchEntity.FamilyTypeCode, Model.FamilyTypes, "All Types", new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div id="section-family-name" class="form-group form-horizontal">
                                                <label>Subfamily Name</label>
                                                @Html.TextBoxFor(x => x.SearchEntity.SubFamilyName, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div id="section-family-name" class="form-group form-horizontal">
                                                <label>Tribe Name</label>
                                                @Html.TextBoxFor(x => x.SearchEntity.TribeName, new { @class = "form-control" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div id="section-family-name" class="form-group form-horizontal">
                                                <label>Subtribe Name</label>
                                                @Html.TextBoxFor(x => x.SearchEntity.SubTribeName, new { @class = "form-control" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @Html.Partial("~/Views/Taxonomy/Family/_DetailExtended.cshtml")
                    }
                </div>
                <div>
                    <button id="btnReset" type="button" class="btn btn-danger">Reset</button>
                    <div class="btn-group float-right">
                        <button type="submit" class="btn btn-info">Search</button>
                        <button type="button" class="btn btn-info dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu" role="menu" style="">
                            <a id="btnSaveSearch" class="dropdown-item" href="#">Save Search</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="timeline">
                <div class="row">
                    <div class="col-md-12">
                        @{Html.RenderAction("_List", "AppUserDynamicQuery"); }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

