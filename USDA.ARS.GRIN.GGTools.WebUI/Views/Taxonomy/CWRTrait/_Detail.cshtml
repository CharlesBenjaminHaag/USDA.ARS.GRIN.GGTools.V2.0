@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.CWRTraitViewModelBase


<div class="card">
    <div class="card-header p-2">
        <ul class="nav nav-pills">
            <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Search Criteria</a></li>
            <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Saved Searches</a></li>
        </ul>
    </div>
    <div class="card-body" id="section-search-criteria">
        <div class="tab-content">
            <div class="tab-pane active" id="activity">
                <div class="form-group">
                    <a class="btn btn-default btn-sm" href="@Url.Action("Add","CWRTrait")">
                        <i class="fa fa-plus"></i> New
                    </a>
                    <button id="btnOpenFolderModal" type="button" class="btn btn-default btn-sm"><i class="fa fa-folder"></i></button>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <div class="form-group form-horizontal">
                            <label>Created By</label>
                            @Html.DropDownListFor(x => x.SearchEntity.CreatedByCooperatorID, Model.Cooperators, "All Cooperators", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <label>Crop For CWR Name</label>
                        @Html.TextBoxFor(x => x.SearchEntity.CropForCWRName, new { @class = "form-control" })
                    </div>
                    <div class="col-md-4">
                        <label>Species Name</label>
                        @Html.TextBoxFor(x => x.SearchEntity.SpeciesName, new { @class = "form-control" })
                    </div>
                    <div class="col-md-2">
                        <div class="form-group form-horizontal">
                            <label>Trait Class</label>
                            @Html.DropDownListFor(x => x.SearchEntity.TraitClassCode, Model.TraitClassCodes, "All Trait Classes", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group form-horizontal">
                            <label>Breeding Type</label>
                            @Html.DropDownListFor(x => x.SearchEntity.BreedingTypeCode, Model.BreedingTypeCodes, "All Breeding Types", new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group form-horizontal">
                            <label>Breeding Usage Note</label>
                            @Html.TextBoxFor(x => x.SearchEntity.BreedingUsageNote, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group form-horizontal">
                            <label>Is Potential</label>
                            @Html.DropDownListFor(x => x.SearchEntity.IsPotential, Model.IsGraftStockOptions, "Either", new { @class = "form-control" })
                        </div>
                    </div>
                </div>
                @Html.Partial("~/Views/Taxonomy/CWRTrait/_DetailExtended.cshtml")
                <div>
                    <button id="btnReset" type="button" class="btn btn-danger">Reset</button>
                    <div class="btn-group float-right">
                        <button type="submit" class="btn btn-info">Search</button>
                        <button type="button" class="btn btn-info dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu" role="menu" style="">
                            <a id="btnSaveSearch" class="dropdown-item" href="#">Save Search</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="timeline">
                <div class="row">
                    <div class="col-md-12">
                        @{Html.RenderAction("_List", "AppUserDynamicQuery"); }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



















