@model USDA.ARS.GRIN.GGTools.ViewModelLayer.FolderViewModel

<div class="card">
    <div class="card-header">
        <h3 class="card-title">My Recent Folders</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <table id="data_table_app_user_item_folder" class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 1%">
                        <i class="fas fa-star text-warning"></i>
                    </th>
                    <th style="width: 20%">
                        Folder Name
                    </th>
                    <th style="width: 30%">
                        Shared With
                    </th>
                    <th style="width: 8%">
                        Type
                    </th>
                    <th style="width: 20%">
                    </th>
                </tr>
            </thead>
            <tbody>
              @foreach (var result in Model.DataCollection)
              {
                <tr>
                    <td>
                        @if (result.IsFavorite)
                        { 
                            <i class="fas fa-star text-warning"></i>
                        }
                    </td>
                    <td>
                        <a>
                            @result.FolderName
                        </a>
                        <br>
                        <small>
                            Created on @result.CreatedDate.ToShortDateString()
                        </small>
                    </td>
                    <td>
                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <img alt="Avatar" class="table-avatar" src="~/Content/dist/img/Users/Schori_Melanie.jpg">
                            </li>
                            <li class="list-inline-item">
                                <img alt="Avatar" class="table-avatar" src="~/Content/dist/img/Users/Dube_Shruti.jpg">
                            </li>
                            <li class="list-inline-item">
                                <img alt="Avatar" class="table-avatar" src="~/Content/dist/img/Users/Wiersema_John.png">
                            </li>
                        </ul>
                    </td>
                    <td class="project-state text-left">
                        <span class="badge bg-gray">@result.FolderTypeDescription</span>
                    </td>
                    <td class="project-actions text-right">
                        <a class="btn btn-primary btn-sm" href="#">
                            <i class="fas fa-users">
                            </i>
                            Share
                        </a>
                        <a class="btn btn-info btn-sm" href="@Url.Action("Edit", "Folder", new { @entityId = result.ID })">
                            <i class="fas fa-pencil-alt">
                            </i>
                            Edit
                        </a>
                        <a class="btn btn-danger btn-sm" href="#">
                            <i class="fas fa-trash">
                            </i>
                            Delete
                        </a>
                    </td>
                </tr>
              }
            </tbody>
        </table>
    </div>
</div>
