@model USDA.ARS.GRIN.GGTools.ViewModelLayer.CooperatorViewModel
<div class="row">
    <div class="col-md-12">
        <div style="margin-bottom:25px;">
            <div class="btn-group">
                <button class="btn btn-info" data-toggle="modal" data-target="#modal-cooperator-lookup">
                    Transfer Selected Records
                </button>
            </div>
        </div>
        
            <table id="data-table-records-owned" class="table table-striped" style="width:100%;">
                <thead>
                    <tr>
                        <th width="5%"></th>
                        <th>Table</th>
                        <th>Records Owned</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var result in Model.DataCollectionReportItems)
                    {
                        if (result.ItemCount > 0)
                        {
                        <tr>
                            <td>
                            </td>
                            <td>
                                @result.Title
                            </td>
                            <td>
                                @result.ItemCount
                            </td>
                            <td>
                            </td>
                        </tr>
                        }
                    }
                </tbody>
            </table>
        
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        InitDataTable("data-table-records-owned");
    });
</script>