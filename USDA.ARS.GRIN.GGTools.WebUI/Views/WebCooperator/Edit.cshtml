<script type="text/javascript">

    function Validate(password, passwordConfirmed) {
        if (password != passwordConfirmed) {
            return false;
        }
        return true;
    }

    /*===========================================================================
     * ADD SYS USER
     *===========================================================================
     */
    $("#btnSubmitAddSysUser").click(function () {
        var userName = $("#txtEditSysUserName").val();
        var password = $("#txtEditSysUserPassword").val();
        var passwordConfirmed = $("#txtEditSysUserPasswordConfirmed").val();
        var validationResult = "";

        validationResult = Validate(userName, password, passwordConfirmed);

        if (validationResult == "") {
            $("#modal-sys-user-edit").modal("hide");
            AddSysUser(userName, password);
        }
    });

    function AddSysUser(userName, password) {
        var link = '@Url.Action("Add", "SysUser")';
        var cooperatorId = $("#Entity_ID").val();
        var formData = new FormData();

        formData.append("CooperatorID", cooperatorId);
        formData.append("SysUserName", userName);
        formData.append("SysUserPassword", password);

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            contentType: false,
            processData: false,
            data: formData,
            success: function (result) {
                $("#section-sys-user-widget").html(result);
                LoadGroups();
            },
            error: function () {
                    alert("Error");
                }
        });
        $("#modal-sys-user-edit").modal("hide");
    }

    /*===========================================================================
     * UPDATE SYS USER
     *===========================================================================
     */
    $("#btnSubmitUpdateSysUser").click(function () {
        var userName = $("#Entity_SysUserName").val();
        var password = $("#txtResetSysUserPassword").val();
        var passwordConfirmed = $("#txtResetSysUserPasswordConfirmed").val();
        var validationResult = "";

        validationResult = Validate(userName, password, passwordConfirmed);

        if (validationResult == "") {
            $("#modal-sys-user-edit").modal("hide");
            UpdateSysUser(userName, password);
        }
    });

    function UpdateSysUser(userName, password) {
        var link = '@Url.Action("ResetPassword", "SysUser")';
        var sysUserId = $("#Entity_SysUserID").val();
        var sysUserName = $("#Entity_SysUserName").val();
        var formData = new FormData();

        formData.append("SysUserID", sysUserId);
        formData.append("SysUserName", sysUserName);
        formData.append("SysUserPassword", password);

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            contentType: false,
            processData: false,
            data: formData,
            success: function (result) {
                $("#section-sys-user-widget").html(result);
                LoadGroups();
            },
            error: function () {
                    alert("Error");
                }
        });
        $("#modal-reset-password").modal("hide");
    }

    /*===========================================================================
     * SYS GROUPS
     *===========================================================================
     */
    function LoadGroups()
    {
        var sysUserId = $("#Entity_SysUserID").val();
        var link = '@Url.Action("RenderGroupWidget","SysUser")' + "?entityId=" + sysUserId;
        var formData = new FormData();

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            contentType: false,
            processData: false,
            data: formData,
            success: function (result) {
                $("#section-sys-user-group-widget").html(result);
            },
            error: function () {
                alert("Error");
            }
        });
    }

</script>


