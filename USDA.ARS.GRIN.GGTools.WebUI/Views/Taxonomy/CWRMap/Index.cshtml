@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.CWRMapViewModel
@{
    ViewBag.Title = Model.PageTitle;
    Layout = "~/Views/Shared/_LayoutAdminLTE3.cshtml";
}

@using (Html.BeginForm("Search", "CWRMap", FormMethod.Post, new { id = "frmMain" }))
{
    @Html.HiddenFor(x => x.EventAction)
    @Html.HiddenFor(x => x.EventValue)
    @Html.HiddenFor(x => x.TableName)
    @Html.HiddenFor(x => x.TableCode)
    @Html.HiddenFor(x => x.PageTitle)
    @Html.HiddenFor(x => x.AuthenticatedUserCooperatorID)
    @Html.HiddenFor(x => x.ItemIDList)
    @Html.Partial("~/Views/Taxonomy/CWRMap/_Detail.cshtml")
}
@Html.Partial("~/Views/Taxonomy/CWRMap/_List.cshtml")
@{Html.RenderAction("_Edit", "Folder", new { @tableName = "taxonomy_cwr_map" }); }

<script type="text/javascript">
    $(document).keypress(function (event) {
        var keycode = (event.keyCode ? event.keyCode : event.which);
        if (keycode == '13') {
            $("#btnSearch").click();
        }
    });

    $(document).ready(function () {
        Init();
        SetExtendedFields();
    });

    function Init() {
        var eventAction = $("#EventAction").val();
        if (eventAction == "SHOW-SEARCH") {
            $("#section-search-criteria").show();
        }
    }

    $(document).on("click", "[id='btnSubmitSearch']", function () {
        event.preventDefault();
        if ($("#section-search-criteria").is(":visible")) {
            $("#EventAction").val("SHOW-SEARCH");
        }
        $("#frmMain").submit();
    });

    $(document).on("click", "[id='btnReset']", function () {
        Reset("data-table-cwr-map");
    });

    /*
    * ===============================================================================
    * CWR TRAIT BATCH-ADD MODAL
    * ===============================================================================
    */
    $(document).on("click", "[id='btnGenerateCWRTraits']", function () {
        $("#section-cwr-trait-batch-edit-traits").show();
    });
</script>