@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.CommonNameViewModel
@{
    ViewBag.Title = Model.PageTitle;
    Layout = "~/Views/Shared/_LayoutAdminLTE3.cshtml";
}

@using (Html.BeginForm("Search", "CommonName", FormMethod.Post, new { id = "frmMain" }))
{
    @Html.HiddenFor(x => x.EventAction)
    @Html.HiddenFor(x => x.EventValue)
    @Html.HiddenFor(x => x.TableName)
    @Html.HiddenFor(x => x.TableCode)
    @Html.HiddenFor(x => x.PageTitle)
    @Html.HiddenFor(x => x.AuthenticatedUserCooperatorID)
    @Html.HiddenFor(x => x.ItemIDList)
    @Html.HiddenFor(x => x.DetailPartialViewName)
    @Html.HiddenFor(x => x.ListPartialViewName)
    @Html.Partial("~/Views/Taxonomy/CommonName/_Detail.cshtml")
}

@Html.Partial("~/Views/Taxonomy/CommonName/_List.cshtml")
@*@Html.Partial("~/Views/Taxonomy/Citation/Modals/_Detail.cshtml")*@
@{Html.RenderAction("RenderEditModal", "AppUserItemFolder", new { @sysTableName = Model.TableName });}

<script type="text/javascript">

    $(document).ready(function () {
        Init();
        SetExtendedFields();
    });

    function Init() {
        var taxonType = $("#EventValue").val();
        var tabId = "tab-" + taxonType;
        $("[id=" + tabId + "]").addClass("active");
    }

    $('.citation-detail').click(function () {
        var id = $(this).attr('id');
        $("#section-citation-id").html(id);
        $("#modal-citation-detail").modal("show");
    });
</script>