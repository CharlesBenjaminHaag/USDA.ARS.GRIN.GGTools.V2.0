@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.RegulationMapViewModel
<div id="section-search-results" class="card card-success">
    <div class="card-header">
        <h3 class="card-title">Regulation Maps (@Model.DataCollection.Count)</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <table id="data_table_taxonomy_regulation_map" class="table table-striped ggtools-table" style=" width:100%;">
            <thead>
                <tr>
                    <th></th>
                    <th width="5%">ID</th>
                    <th>Family</th>
                    <th>Genus</th>
                    <th>Species</th>
                    <th>Regulation</th>
                    <th>Exempt</th>
                    <th>Note</th>
                    <th>Last Modified</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.DataCollection != null)
                {
                    if (Model.DataCollection.Count() > 0)
                    {
                        foreach (var result in Model.DataCollection)
                        {
                        <tr>
                            <td>
                                @result.ID
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "RegulationMap", new { @entityId = result.ID })">[@result.ID]</a>
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "FamilyMap", new { entityId = result.FamilyID })">
                                    @result.FamilyName
                                </a>
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Genus", new { entityId = result.GenusID })">
                                    @result.GenusName
                                </a>
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Species", new { entityId = result.SpeciesID })">
                                    @result.SpeciesName
                                </a>
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "Regulation", new { entityId = result.RegulationID })">
                                    @result.AssembledName
                                </a>
                            </td>
                            <td>
                                @Html.Raw(Model.FormatBoolean(result.IsExempt))
                            </td>
                            <td>@Html.Raw(result.Note)</td>
                            <td>
                                @if (result.ModifiedDate != DateTime.MinValue)
                                {
                                    @result.ModifiedDate.ToShortDateString()
                                }
                            </td>
                            <td>
                                @if (Model.EventAction == "FOLDER")
                                {
                                    <a href="@Url.Action("DeleteItem", "Folder", new { @folderId = result.FolderID, @appUserItemListId = result.AppUserItemListID })"
                                       class="btn btn-danger btn-sm float-right row-edit margin-r-5">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                }
                                else
                                {
                                    <a href="@Url.Action("Edit", "RegulationMap", new { entityId = result.ID })" class="btn btn-default btn-sm float-right row-edit">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        InitDataTable("data_table_taxonomy_regulation_map");
    });
</script>
