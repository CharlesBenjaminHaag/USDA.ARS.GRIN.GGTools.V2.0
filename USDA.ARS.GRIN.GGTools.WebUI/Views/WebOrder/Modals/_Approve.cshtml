@model USDA.ARS.GRIN.GGTools.ViewModelLayer.WebOrderRequestViewModel
<div id="modal-web-order-request-approve" class="modal modal-success fade" role='dialog'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">
                    <i class="fa fa-thumbs-up"></i> 
                    Approve Web Order <span id="web-order-request-id"></span>
                </h4>
            </div>
            <div class="modal-body" id="modal-body">
                <h4>
                    This will return this web order request to <strong>Submitted</strong> status, and make it visble
                    within the Order Wizard.
                </h4>
                <div class="form-group">
                    <label>Add Note (Internal User Only)</label>
                    <textarea id="txtApprovalNote" class="form-control note-format" rows="5"></textarea>
                </div>
                <div class="input-group">
                    <input type="text" disabled="" readonly class="form-control" style="background-color: #00a65a; color:white;" value="Send email to curators">
                    <span class="input-group-addon" style="background-color: #00a65a; color:white;">
                        <input id="cbxApproveEmailCurators" type="checkbox" checked="checked">
                    </span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" id="btnSubmitApprove" class="btn btn-outline" data-dismiss="modal">Continue</button>
                <button type="button" id="btn-approve-cancel" class="btn btn-outline pull-left" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
