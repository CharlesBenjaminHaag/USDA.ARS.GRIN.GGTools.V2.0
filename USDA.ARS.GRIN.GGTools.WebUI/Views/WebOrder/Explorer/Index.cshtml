    function LoadChildData(timeFrame, selectedStatusList, selectedWebUserList)  {
    var link = '@Url.Action("_Lookup", "WebOrder")';
    var formData = new FormData();

    formData.append("TimeFrame", timeFrame);
    //formData.append("SelectedStatusList", selectedStatusList);
    //formData.append("SelectedWebUserList", selectedWebUserList);

    $.ajax({
        url: link,
        type: 'POST',
        cache: false,
        contentType: false,
        processData: false,
        data: formData,
        success: function (response) {
            $("#section-web-order-search-results").html(response);
            InitDataTableWebOrderRequests("table_web_order_requests");
        }
    });
    }

    function InitDataTableWebOrderRequests(tableName) {
        $(document).ready(function () {
            var table = $("#" + tableName).DataTable({
                /*dom: 'Blfrtip',*/
                paging: false,
                "pageLength": 10,
                //initComplete: function () {
                //    SetControlVisibility(tableName);
                //},
                responsive: true,
                //buttons: [
                //    'selectAll',
                //    'selectNone',
                //    'csv',
                //    'excel',
                //    'pdf'
                //],
                select: {
                    style: 'single'
                },
                responsive:true,
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
                columnDefs: [
                    { targets: [0], visible: false }
                ]
            });

            //Select first row by default; load related data.
            table.row(':eq(0)', { page: 'current' }).select();
            var firstRowData = table.row(':eq(0)', { page: 'current' }).data();

            $('#table_web_order_requests tbody').on('click', 'tr', function () {
                var data = table.row(this).data();
                LoadWebOrderRequestDetail(data[0]);
            });

            //table.on('search.dt', function () {
            //    alert("DEBUG FILTER " + table.search());
            //});
        });
    }

    function LoadWebOrderRequestDetail(webOrderRequestId) {
        link = '@Url.Action("ExplorerDetail", "WebOrder")';
        var formData = new FormData();

        formData.append("entityId", webOrderRequestId);

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            contentType: false,
            processData: false,
            data: formData,
            success: function (response) {
                $("#section-web-order-request-detail").html(response);
            }
        });
    }

