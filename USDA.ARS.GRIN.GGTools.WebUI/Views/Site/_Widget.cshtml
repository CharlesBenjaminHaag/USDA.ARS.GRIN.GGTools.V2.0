@model USDA.ARS.GRIN.GGTools.ViewModelLayer.SiteViewModel
<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">My Site</h3>
    </div>
    <div class="card-body">
        <strong><i class="fas fa-book mr-1"></i> Name</strong>
        <p class="text-muted">
            @Model.Entity.LongName
        </p>
        @*<hr>
        <strong><i class="fas fa-envelope mr-1"></i> Email</strong>
        <p class="text-muted">@Model.Entity.EmailAddress</p>*@
        <hr>
        <strong><i class="fas fa-users mr-1"></i> Site Cooperators</strong>
        @*<a href="@Url.Action("Edit","Cooperator", new { entityId = Model.Entity.ID })" class="btn btn-default btn-block" style="margin-top:15px;">
            Add Cooperator
        </a>*@
        <button id="btnAddCooperator" 
                class="btn btn-default btn-block" 
                style="margin-top:15px;" 
                data-target="#modal-cooperator-add" 
                data-toggle="modal">
                    Add Cooperator
        </button>
        <table id="data-table-site-cooperators" class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <td>Status</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in Model.DataCollectionSiteCooperators)
                { 
                    <tr>
                        <td>@result.ID</td>
                        <td>
                            <a href="@Url.Action("Edit","Cooperator", new { entityId = result.ID })">
                                @result.FullName
                            </a>
                        </td>
                        <td>@result.StatusCode</td>
                    </tr>
                }
            </tbody>
        </table>
        @*<strong><i class="far fa-file-alt mr-1"></i> Notes</strong>
        <p class="text-muted">@Model.Entity.Note</p>*@
    </div>
    <!-- TODO -->
    <div class="card-footer">
        <a href="@Url.Action("Edit","Site", new { entityId = Model.Entity.ID })" class="btn btn-primary btn-block">
            Edit My Site
        </a>
    </div>
</div>
<script type="text/javascript">
    InitWidgetDataTable("data-table-site-cooperators");
    function InitWidgetDataTable(tableName) {
        $(document).ready(function () {
            tableName = "#" + tableName;
            table = $(tableName).DataTable({
                paging: false,
                responsive: true,
                select: {
                    style: 'single'
                },
                searching: false,
                columnDefs: [
                    { targets: [0], visible: false }
                ]
            });
        });
    }
</script>