@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.ClassificationViewModel
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Families (@Model.DataCollection.Count)</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <div id="section-search-results">
            <table id="data_table_taxonomy_classification" class="table table-striped ggtools-table" style=" width:100%;">
                <thead>
                    <tr>
                        <th width="5%"></th>
                        <th width="5%">ID</th>
                        <th>Order Name</th>
                        <th style="text-align: center;">Related Families</th>
                        <th>Last Modified</th>
                        <th>Modified By</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.DataCollection != null)
                    {
                        if (Model.DataCollection.Count() > 0)
                        {
                            foreach (var result in Model.DataCollection)
                            {
                                <tr>
                                    <td>
                                        @result.ID
                                    </td>
                                    <td>
                                        @result.ID
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit","Classification", new { entityId = result.ID })">@result.OrderName</a>
                                    </td>
                                    <td style="text-align: center;">
                                        <span class="label label-default" style="font-size:9.5pt;">@result.TotalFamilies</span>
                                    </td>

                                    <td>
                                        @if (result.ModifiedDate > DateTime.MinValue)
                                        {
                                            @result.ModifiedDate.ToShortDateString()
                                        }
                                    </td>
                                    <td>
                                        @result.ModifiedByCooperatorName
                                    </td>
                                    <td style="text-align:right;">
                                        <a href="@Url.Action("Edit", "Classification", new { entityId = result.ID })" class="btn btn-primary btn-flat btn-sm pull-right row-edit">
                                            <i class="fa fa-edit"></i> Edit
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        InitDataTable("data_table_taxonomy_classification");
    });
</script>