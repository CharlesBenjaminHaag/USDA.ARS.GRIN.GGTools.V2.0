@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.GenusViewModel

<div class="card">
    <div class="card-header p-2">
        <ul class="nav nav-pills">
            <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Search Criteria</a></li>
            <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Saved Searches</a></li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content">
            <div class="tab-pane active" id="activity">
                <div id="section-search-criteria">
                    <div class="margin" style="margin-bottom:10px;">
                        <div class="btn-group">
                            <a class="btn btn-default btn-sm" href="@Url.Action("Add","Genus", new { rank = "genus" })">Add Genus</a>
                        </div>
                        <div class="btn-group">
                            <button id="btnOpenFolderModal" type="button" class="btn btn-default btn-sm"><i class="fa fa-folder"></i></button>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default btn-sm" data-toggle="modal" data-target="#modal-citation-lookup">
                                <i class="fa fa-book"></i>
                            </button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <div class="form-group form-horizontal">
                                <label>Created By</label>
                                @Html.DropDownListFor(x => x.SearchEntity.CreatedByCooperatorID, Model.Cooperators, "All Cooperators", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group form-horizontal">
                                <label>Name</label>
                                @Html.TextBoxFor(x => x.SearchEntity.FullName, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-1">
                            <label>Accepted</label>
                            @Html.DropDownListFor(x => x.SearchEntity.IsAcceptedName, Model.YesNoOptions, "Either", new { @class = "form-control" })
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Qualifying Code</label>
                                @Html.DropDownListFor(x => x.SearchEntity.QualifyingCode, Model.QualifyingCodes, "All codes", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label>Hybrid Code</label>
                                @Html.DropDownListFor(x => x.SearchEntity.HybridCode, Model.HybridCodes, "All codes", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    @Html.Partial("~/Views/Taxonomy/Genus/_DetailExtended.cshtml")
                </div>
                <div>
                    <button id="btnReset" type="button" class="btn btn-danger">Reset</button>
                    <div class="btn-group float-right">
                        <button type="submit" class="btn btn-info">Search</button>
                        <button type="button" class="btn btn-info dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu" role="menu" style="">
                            <a id="btnSaveSearch" class="dropdown-item" href="#">Save Search</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="timeline">
                <div class="row">
                    <div class="col-md-12">
                        @{Html.RenderAction("_List", "AppUserDynamicQuery"); }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


