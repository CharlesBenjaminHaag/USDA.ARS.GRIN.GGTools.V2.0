@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.GeographyViewModel
<div id="section-search-results" class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Geography (@Model.DataCollection.Count)</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <table id="data-table-geography" class="table table-striped" style=" width:100%;">
            <thead>
                <tr>
                    <th></th>
                    <th width="5%">ID</th>
                    <th>Continent</th>
                    <th>Sub-Continent</th>
                    <th>Country</th>
                    <th>Admin 1</th>
                    <th>Type</th>
                    <th>Admin 2</th>
                    <th>Type</th>
                    <th>Valid</th>
                    <th>Note</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var result in Model.DataCollection)
                {
                    <tr>
                        <td>
                            @result.ID
                        </td>
                        <td>
                            @result.ID
                        </td>
                        <td>@result.Continent</td>
                        <td>@result.SubContinent</td>
                        <td>@result.CountryDescription</td>
                        <td>@result.Admin1</td>
                        <td>@result.Admin1TypeCode</td>
                        <td>@result.Admin2</td>
                        <td>@result.Admin2TypeCode</td>
                        <td>
                            @Html.Raw(Model.FormatBoolean(@result.IsValid))
                        </td>
                        <td>
                            @Html.Raw(result.Note)
                        </td>
                        <td style="text-align:right;">
                            <a href="@Url.Action("Edit", "Geography", new { entityId = result.ID })" class="btn btn-default btn-sm pull-right row-edit">
                                <i class="fa fa-edit"></i>
                            </a>
                            @*@if (Model.Action == "Folder")
                            {
                                <button id="btnDeleteFolderItem_@cropForCWR.ReferenceID" class="btn btn-danger btn-sm pull-right row-edit margin-r-5">
                                    <i class="fa fa-trash"></i> Remove From Folder
                                </button>
                            }*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        InitDataTable("data-table-geography");
    });
</script>
