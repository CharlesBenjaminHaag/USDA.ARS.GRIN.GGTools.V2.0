                                                    type="button"
                                                    data-toggle="modal"
                                                    data-ggtools-action="GenusID"
                                                    data-ggtools-value="GenusName"
                                                    data-target="#modal-genus-lookup"
                                                    class="btn btn-default btn-flat">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
