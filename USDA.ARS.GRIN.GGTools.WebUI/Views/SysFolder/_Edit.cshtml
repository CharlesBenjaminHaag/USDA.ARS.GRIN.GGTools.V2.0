@model USDA.ARS.GRIN.GGTools.ViewModelLayer.SysFolderViewModel
@using (Html.BeginForm("Edit", "SysFolder", FormMethod.Post, new { id = "frmAppUserItemFolder" }))
{
    @Html.HiddenFor(x => x.EventInfo)
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label>Name</label>
                @Html.TextBoxFor(x => x.Entity.Title, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Description</label>
                @Html.TextBoxFor(x => x.Entity.Description, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <h5>Tags</h5>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label for="newTag">Enter a New Tag</label>
                @Html.TextBoxFor(x => x.TagEntity.TagText, new { @id = "newTag", @class = "form-control" })
                @*<input type="text" id="newTag" class="form-control" placeholder="Enter new tag">*@
            </div>
            <div class="form-group">
                <label for="tagColor">Tag Color</label>
                <input type="color" class="form-control" id="tagColor">
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label for="existingTag">Select an Existing Tag</label>
                <select id="existingTag" class="form-control">
                    <option value="">Select a Tag</option>
                    <!-- Existing tags options -->
                </select>
            </div>

            @*<button type="submit">Save Tag</button>*@

        </div>
    </div>
}

