@model USDA.ARS.GRIN.GGTools.ViewModelLayer.FolderViewModel
<div class="modal fade text-sm" id="modal-folder-edit-cooperators" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    <i class="fas fa-search"></i>
                    Folder
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-6">
                        <button id="btnAddCooperators" class="btn btn-default btn-block">>></button>
                        <div id="section-available-cooperators">
                            @Html.Partial("~/Views/Folder/Cooperator/_ListAvailable.cshtml")
                        </div>
                    </div>
                    <div class="col-md-6">
                        <button id="btnRemoveCooperators" class="btn btn-default btn-block"><<</button>
                        <div id="section-current-cooperators">
                            @Html.Partial("~/Views/Folder/Cooperator/_ListCurrent.cshtml")
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button id="btnCloseEditCooperatorsModal" type="button" class="btn btn-primary float-right" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $("#btnAddCooperators").click(function () {
        var entityId = $("#Entity_ID").val();
        AddCooperators();
        LoadAvailableCooperators(entityId);
        LoadCurrentCooperators(entityId);
    });

    $("#btnRemoveCooperators").click(function () {
        var entityId = $("#Entity_ID").val();
        RemoveCooperators();
        LoadCurrentCooperators(entityId);
        LoadAvailableCooperators(entityId);
    });

    $("#btnCloseEditCooperatorsModal").click(function () {
        RenderFolderCooperatorWidget();
    });

    function AddCooperators() {
        var link = '@Url.Action("AddCooperators","Folder")';
        var entityId = $("#Entity_ID").val();
        var selectedItemIdList = GetSelectedEntityIDs("data-table-available-cooperators");
        var formData = new FormData();

        formData.append("FolderID", entityId);
        formData.append("IDList", selectedItemIdList);

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            dataType: 'json',
            contentType: false,
            processData: false,
            data: formData,
            success: function (data) {
                /*console.log(data);*/
                /*ConfirmFolderSave(data.folder.FolderName);*/
            },
            error: function (ex) {
            }
        });
    }

    function RemoveCooperators() {
        var link = '@Url.Action("DeleteCooperators","Folder")';
        var entityId = $("#Entity_ID").val();
        var selectedItemIdList = GetSelectedEntityIDs("data-table-current-cooperators");
        var formData = new FormData();

        formData.append("FolderID", entityId);
        formData.append("IDList", selectedItemIdList);

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            dataType: 'json',
            contentType: false,
            processData: false,
            data: formData,
            success: function (data) {
            },
            error: function (ex) {
            }
        });
    }

    function LoadAvailableCooperators(folderId) {
        var link = '@Url.Action("_ListAvailableCooperators","Folder")';
        var formData = new FormData();

        formData.append("FolderID", folderId);

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            contentType: false,
            processData: false,
            data: formData,
            success: function (response) {
                $("#section-available-cooperators").html(response);
            },
            error: function () {
                alert("Error loading available cooperators");
            }
        });
    }

    function LoadCurrentCooperators(folderId) {
        var link = '@Url.Action("_ListCurrentCooperators", "Folder")';
        var formData = new FormData();

        formData.append("FolderID", folderId);

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            contentType: false,
            processData: false,
            data: formData,
            success: function (response) {
                $("#section-current-cooperators").html(response);
            },
            error: function () {
                alert("Error loading current cooperators");
            }
        });
    }
</script>