@model USDA.ARS.GRIN.GGTools.ViewModelLayer.SysUserViewModel
@if (Model.DataCollectionGroups.Count > 0)
{
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Groups (@Model.DataCollectionGroups.Count)</h3>
        </div>
        <div class="card-body">
            <div id="external-events">
                @foreach (var result in Model.DataCollectionGroups)
                {
                    @*<div class="external-event bg-blue" style="position: relative;">@result.GroupTag</div>*@
                    @*<div class="external-event bg-gray" style="position: relative;">
                        
                    </div>*@
                    <span class="badge badge-info" style="font-size:11pt;">
                        @result.GroupTag
                    </span>
                }
            </div>
        </div>
        <div id="section-edit-controls" class="card-footer">
            <button id="btnEditGroups" class="btn btn-default btn-block">Edit Groups</button>
        </div>
    </div>
}
else
{
    <div class="alert alert-warning alert-dismissible" style="padding-right:.9rem;">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
        <h5><i class="icon fas fa-exclamation-triangle"></i> No Groups Assigned</h5>
        This user must be assigned to the baseline GRIN-Global groups to be able to use the Curator Tool.
        <br />
        <button type="button" class="btn btn-block btn-sm btn-outline-dark" style="margin-top:.3rem;">Assign User to Group(s)</button>
    </div>
}
