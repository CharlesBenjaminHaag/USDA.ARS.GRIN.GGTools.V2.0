@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.FamilyMapViewModel
<table id="data-table-family-lookup" class="table table-responsive table-striped ggtools-table" style=" width:100%;">
    <thead>
        <tr>
            <th></th>
            <th width="5%">ID</th>
            <th>Name</th>
            <th>Accepted</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.DataCollection != null)
        {
            if (Model.DataCollection.Count() > 0)
            {
                foreach (var result in Model.DataCollection)
                {
                    <tr>
                        <td>
                            @result.ID
                        </td>
                        <td>
                            <span class="label label-default">
                                @result.ID
                            </span>
                        </td>
                        <td>@Html.Raw(result.AssembledName)</td>
                        <td align="center">@Html.Raw(Model.FormatBoolean(result.IsAcceptedName))</td>
                    </tr>
                }
            }
        }
</tbody>
</table>
<script type="text/javascript">
    $(document).ready(function () {
        InitDataTableLight("data-table-family-lookup");
    });
</script>