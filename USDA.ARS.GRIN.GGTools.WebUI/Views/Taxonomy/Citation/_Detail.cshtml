@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.CitationViewModelBase


<div class="card">
    <div class="card-header p-2">
        <ul class="nav nav-pills">
            <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Search Criteria</a></li>
            <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Saved Searches</a></li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content">
            <div class="tab-pane active" id="activity">
                <div id="section-search-criteria">
                    <div class="btn-group">
                        <a class="btn btn-default btn-sm" href="@Url.Action("Add","Citation")">
                            <i class="fa fa-plus"></i> New
                        </a>
                    </div>
                    <div class="btn-group">
                        <button id="btnOpenFolderModal" type="button" class="btn btn-default btn-sm"><i class="fa fa-folder"></i></button>
                    </div>
                    @using (Html.BeginForm("Search", "Citation", FormMethod.Post, new { id = "frmMain" }))
                    {
                        <div class="row">
                            <div class="col-md-1">
                                <div id="form-group">
                                    <label id="lblStandardAbbreviation">Literature Type</label>
                                    @Html.DropDownListFor(x => x.SearchEntity.LiteratureTypeCode, Model.LiteratureTypes, "All types", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div id="form-group">
                                    <label id="lblStandardAbbreviation">Standard Abbreviation</label>
                                    @Html.DropDownListFor(x => x.SearchEntity.StandardAbbreviation, Model.StandardAbbreviations, "All sources", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div id="form-group">
                                    <label>Abbreviation</label>
                                    @Html.TextBoxFor(x => x.SearchEntity.Abbreviation, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div id="form-group">
                                    <label>Citation Title</label>
                                    @Html.TextBoxFor(x => x.SearchEntity.CitationTitle, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div id="form-group">
                                    <label>Editor/Author</label>
                                    @Html.TextBoxFor(x => x.SearchEntity.EditorAuthorName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div id="form-group">
                                    <label>Cit. Year</label>
                                    @Html.TextBoxFor(x => x.SearchEntity.CitationYear, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div>
                    <button id="btnReset" type="button" class="btn btn-danger">Reset</button>
                    <div class="btn-group float-right">
                        <button type="submit" class="btn btn-info">Search</button>
                        <button type="button" class="btn btn-info dropdown-toggle dropdown-icon" data-toggle="dropdown" aria-expanded="false">
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <div class="dropdown-menu" role="menu" style="">
                            <a id="btnSaveSearch" class="dropdown-item" href="#">Save Search</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane" id="timeline">
                <div class="row">
                    <div class="col-md-12">
                        @{Html.RenderAction("_List", "AppUserDynamicQuery"); }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

