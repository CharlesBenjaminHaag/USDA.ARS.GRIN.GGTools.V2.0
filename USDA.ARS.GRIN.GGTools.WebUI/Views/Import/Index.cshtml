@using System.Data;
@using USDA.ARS.GRIN.GGTools.DataLayer;
@model USDA.ARS.GRIN.GGTools.ViewModelLayer.ImportViewModel
@{
    ViewBag.Title = "Import";
    Layout = "~/Views/Shared/_LayoutAdminLTE3.cshtml";
}

@{
    SysTableField sysTableFieldHeading = new SysTableField();
    SysTableField sysTableField = new SysTableField();
    int keyColumnCount = 0;
}

@Html.HiddenFor(x => x.RowsAffected)

@using (Html.BeginForm("Post", "Import", FormMethod.Post, new { id = "frmEdit", enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Select the file to upload</label>
                @Html.TextBoxFor(x => x.DocumentUpload, new { @class = "form-control", @type = "file" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="submit" class="btn btn-primary" />Load File
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            @if (Model.DataCollectionDataTable != null)
            {
                if (Model.DataCollectionDataTable.Rows.Count > 0)
                {
                    <table id="tblImport" class="table table-striped" style="width:100%;">
                        <thead>
                            <tr>
                                @foreach (DataColumn col in Model.DataCollectionDataTable.Columns)
                                {
                                    sysTableFieldHeading = Model.GetColumnInfo(Model.TableName, col.ColumnName);

                                    if (sysTableFieldHeading.IsPrimaryKey == "Y")
                                    {
                                        <th>
                                            <span class="badge-info">PK</span> @col.ColumnName
                                        </th>
                                        <th></th>
                                    }
                                    else
                                    {
                                        <th>
                                            @col.ColumnName
                                        </th>
                                    }
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DataRow dr in Model.DataCollectionDataTable.Rows)
                            {
                                <tr>
                                    @foreach (DataColumn rowCol in Model.DataCollectionDataTable.Columns)
                                    {
                                        if (sysTableField.IsPrimaryKey == "Y")
                                        {
                                            keyColumnCount++;
                                            <td>
                                                @dr[rowCol.ColumnName]
                                            </td>
                                            <td>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                @dr[rowCol.ColumnName]
                                            </td>
                                        }
                                    }
                                </tr>
                            }
                        </tbody>
                        <tfoot>

                        </tfoot>
                    </table>
                    <script type="text/javascript">

                    </script>
                }
            }

        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        var searchResultsVisible = 0;
        searchResultsVisible = $("#RowsAffected").val();

        if (searchResultsVisible > 0) {
            var tableName = "data_table_" + $("#TableName").val();
            InitDataTableDynamicQuery(tableName);
        }
    });

    function InitDataTableDynamicQuery(tableName) {
        tableName = "#" + tableName;
        $(document).ready(function () {
            table = $(tableName).DataTable({
                dom: 'Blfrtip',
                paging: true,
                "pageLength": 10,
                scrollX: true,
                responsive: true,
                buttons: [
                    'selectAll',
                    'selectNone',
                    'csv',
                    'excel',
                    'pdf',
                    {
                        text: 'Add to Folder',
                        action: function (e, dt, node, config) {
                            OpenFolderModal();
                        }
                    }
                ],
                select: true,
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
                //columnDefs: [
                //    { targets: [0], visible: false }
                //]
            });

            $('table.ggtools').on('click', 'tr', function () {
                var data = table.row(this).data();
                /*alert('You clicked on ' + data[0] + "'s row");*/
            });
        });
    }
</script>