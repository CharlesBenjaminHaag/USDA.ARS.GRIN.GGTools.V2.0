@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.LiteratureViewModel

<table id="data-table-literature-lookup" class="table table-striped">
    <thead>
        <tr>
            <th></th>
            <th width="5%">ID</th>
            <th>Abbreviation</th>
            <th>Reference Title</th>
            <th>Author</th>
            <th>Publication Year</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.DataCollection != null)
        {
            if (Model.DataCollection.Count() > 0)
            {
                foreach (var result in Model.DataCollection)
                {
                    <tr>
                        <td>
                            @result.ID
                        </td>
                        <td>
                            @result.ID
                        </td>
                        <td>@Html.Raw(result.Abbreviation)</td>
                        <td>@Html.Raw(result.ReferenceTitle)</td>
                        <td>@result.EditorAuthorName</td>
                        <td>@result.PublicationYear</td>
                    </tr>
                }
            }
        }
    </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        InitDataTableLight("data-table-literature-lookup");
    });
</script>