@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.CitationViewModelBase
<table id="citation-lookup-data-table" class="table table-striped" style="margin-top:25px; width:100%;">
    <thead>
        <tr>
            <th></th>
            <th width="5%">ID</th>
            <th>Citation Text</th>
            <th>Taxon</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.DataCollection != null)
        {
            if (Model.DataCollection.Count() > 0)
            {
                foreach (var result in Model.DataCollection)
                {
                    <tr>
                        <td>@result.ID</td>
                        <td>
                            @result.ID
                        </td>
                        <td>@Html.Raw(result.CitationText)</td>
                        <td>
                            @result.SpeciesName
                        </td>
                    </tr>
            }
        }
    }
    </tbody>
</table>
<br />
<div class="row">
    <div class="col-md-12">
        <button id="btnSaveSelectedCitation" type="button" class="btn btn-info float-right" data-dismiss="modal">Use Selected Citation</button>
    </div>
</div>
<script type="text/javascript">
    InitDataTableLight('citation-lookup-data-table');
</script>
