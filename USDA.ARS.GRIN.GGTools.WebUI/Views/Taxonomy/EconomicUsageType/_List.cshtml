@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.EconomicUsageTypeViewModel
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">@Model.TableName (@Model.DataCollection.Count)</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <div id="section-search-results" class="data-list">
            <table id="data_table_taxonomy_economic_usage_type" class="table table-striped ggtools-table">
                <thead>
                    <tr>
                        <th></th>
                        <th width="5%">ID</th>
                        <th>Usage Code</th>
                        <th>Usage Type</th>
                        <th>Note</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var result in Model.DataCollection)
                    {
                        <tr>
                            <td>
                                @result.ID
                            </td>
                            <td>@result.ID</td>
                            <td>
                                @result.EconomicUsageCode
                            </td>
                            <td>@result.UsageType</td>
                            <td>
                                @result.Note
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "EconomicUsageType", new { entityId = result.ID })" class="btn btn-default btn-sm float-right row-edit">
                                    <i class="fa fa-edit"></i>
                                </a>
                                @if (Model.EventAction == "FOLDER")
                                {
                                    <a href="@Url.Action("DeleteItem", "Folder", new { @folderId = result.FolderID, @appUserItemListId = result.AppUserItemListID })"
                                       class="btn btn-danger btn-sm float-right row-edit margin-r-5">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        InitDataTable("data_table_taxonomy_economic_usage_type");
    });
</script>
