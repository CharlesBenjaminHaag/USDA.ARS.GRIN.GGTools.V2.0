@model USDA.ARS.GRIN.GGTools.ViewModelLayer.CooperatorViewModel
<div class="modal fade" id="modal-cooperator-email" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Preview Cooperator Email</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("SetStatus", "Cooperator", FormMethod.Post, new { id = "frmEditCooperatorEmail" }))
                {
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Preview Cooperator Email</h3>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <input class="form-control" placeholder="From:" value="@Model.EmailMessage.EmailFrom" readonly="readonly">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="<<Recipient email(s) here>>" , readonly="readonly">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Subject:" value="@Model.EmailMessage.Subject">
                            </div>
                            <div class="form-group">
                                @Html.TextAreaFor(x => x.EmailMessage.Body, new { @class = "form-control" })
                            </div>
                            @Html.Partial("~/Views/Shared/_RevisionHistorySimple.cshtml")
                        </div>
                        <div class="card-footer">
                            <div class="float-right">
                                <button id="btnSetStatus" type="button" class="btn btn-primary"><i class="far fa-save"></i> Save Edits</button>
                            </div>
                            <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> Discard</button>
                        </div>

                    </div>
                }
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>

    </div>

</div>

