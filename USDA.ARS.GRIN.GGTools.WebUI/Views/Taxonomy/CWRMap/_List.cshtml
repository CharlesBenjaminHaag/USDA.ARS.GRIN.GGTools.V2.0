@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.CWRMapViewModel
<div id="section-search-results" class="card card-default">
    <div class="card-header">
        <h3 class="card-title">CWR Maps (@Model.DataCollection.Count)</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <table id="data_table_taxonomy_cwr_map" class="table table-striped" style=" width:100%;">
            <thead>
                <tr>
                    <th></th>
                    <th width="5%">ID</th>
                    <th>Crop Common Name</th>
                    <th>Crop Name</th>
                    <th>Species Name</th>
                    <th>Is Crop</th>
                    <th>Is Potential</th>
                    <th>Is Graftstock</th>
                    <th>Genepool Code</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.DataCollection != null)
                {
                    if (Model.DataCollection.Count() > 0)
                    {
                        foreach (var result in Model.DataCollection)
                        {
                            <tr>
                                <td>
                                    @result.ID
                                </td>
                                <td>
                                    @result.ID
                                </td>
                                <td>@result.CropCommonName</td>
                                <td>
                                    <a href="@Url.Action("Edit", "CropForCWR", new { entityId = result.CropForCWRID })">
                                        @result.CropForCWRName
                                    </a>
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit", "Species", new { entityId = result.SpeciesID })">
                                        @result.SpeciesName
                                    </a>
                                </td>
                                <td>@Html.Raw(Model.FormatBoolean(result.IsCrop))</td>
                                <td>@Html.Raw(Model.FormatBoolean(result.IsPotential))</td>
                                <td>@Html.Raw(Model.FormatBoolean(result.IsGraftstock))</td>
                                <td>@result.GenepoolCode</td>
                                <td>
                                    <a href="@Url.Action("Edit", "CWRMap", new { entityId = result.ID })" class="btn btn-default btn-sm pull-right row-edit">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    @*@if (Model.Action == "Folder")
                                        {
                                            <button id="btnDeleteFolderItem_@cropForCWR.ReferenceID" class="btn btn-danger btn-sm pull-right row-edit margin-r-5">
                                                <i class="fa fa-trash"></i> Remove From Folder
                                            </button>
                                        }*@
                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        Init();
        InitDataTable("data_table_taxonomy_cwr_map");
    });
</script>