@model USDA.ARS.GRIN.GGTools.ViewModelLayer.HomeViewModel
@{
    ViewBag.Title = "My GGTools";
    Layout = "~/Views/Shared/_LayoutAdminLTE3.cshtml";
}

<div class="row">
    <div class="col-md-3">
        @{Html.RenderAction("RenderWidget", "Cooperator", new { cooperatorId = Model.CooperatorID }); }
    </div>
    <div class="col-md-6">
        @if ((Model.AuthenticatedUser.IsInRole("GGTOOLS_ARM")) || (Model.AuthenticatedUser.IsInRole("ADMINS")))
        {
            <div class="small-box bg-info">
                <div class="inner">
                    <h3>
                        <a href="@Url.Action("Navigate", "Home", new { applicationCode = "GGT-ARM" })" style="color:white; text-decoration:underline;">
                            ARB
                        </a>
                    </h3>
                    <p>Access Rights Management</p>
                </div>
                <div class="icon">
                    <i class="fas fa-user-cog"></i>
                </div>
                <a href="@Url.Action("Navigate", "Home", new { applicationCode = "GGT-ARM" })" class="small-box-footer">
                    Launch <i class="fas fa-arrow-circle-right"></i>
                </a>
            </div>
        }

        @if ((Model.AuthenticatedUser.IsInRole("GGTOOLS_TAXON")) || (Model.AuthenticatedUser.IsInRole("ADMINS")))
        {
            <div class="small-box bg-success">
                <div class="inner">
                    <h3>
                        <a href="@Url.Action("Navigate", "Home", new { applicationCode = "GGT-TAX" })" style="color:white; text-decoration:underline;">
                            TurboTaxon
                        </a>
                    </h3>
                    <p>Edit taxonomical data</p>
                </div>
                <div class="icon">
                    <i class="fas fa-leaf"></i>
                </div>
                <a href="@Url.Action("Navigate", "Home", new { applicationCode = "GGT-TAX" })" class="small-box-footer">
                    Launch <i class="fas fa-arrow-circle-right"></i>
                </a>
            </div>
        }


        @if ((Model.AuthenticatedUser.IsInRole("GGTOOLS_CUR")) || (Model.AuthenticatedUser.IsInRole("ADMINS")))
        {
            <div class="small-box bg-warning bg-purple">
                <div class="inner">
                    <h3>Curator Portal</h3>
                    <p>View accession and inventory data</p>
                </div>
                <div class="icon">
                    <i class="fas fa-tree"></i>
                </div>
                <a href="@Url.Action("Navigate", "Home", new { applicationCode = "GGT-CUR" })" class="small-box-footer">
                    Launch <i class="fas fa-arrow-circle-right"></i>
                </a>
            </div>
        }

        @if ((Model.AuthenticatedUser.IsInRole("GGTOOLS_ORDERS")) || (Model.AuthenticatedUser.IsInRole("ADMINS")))
        {
            <div class="small-box bg-danger">
                <div class="inner">
                    <h3>NRR Tool</h3>
                    <p>Review and process Non-Research Requests (NRR)</p>
                </div>
                <div class="icon">
                    <i class="fas fa-angry"></i>
                </div>
                <a href="@Url.Action("Navigate", "Home", new { applicationCode = "GGT-NRR" })" class="small-box-footer">
                    Launch <i class="fas fa-arrow-circle-right"></i>
                </a>
            </div>
        }

        @if ((Model.AuthenticatedUser.IsInRole("GGTOOLS_ARM")) || (Model.AuthenticatedUser.IsInRole("ADMINS")))
        {
            <div class="card card-outline card-warning">
                <div class="card-header">
                    <h3 class="card-title">Pending Cooperator Requests</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div id="section-cooperator-list-pending" class="card-body">
                    @{Html.RenderAction("_List", "Cooperator", new { statusCode = "PENDING", formatCode = "SLST" }); }
                </div>
            </div>
        }
    </div>
    <div class="col-md-3">
        @{Html.RenderAction("RenderWidget", "Site", new { siteId = Model.SiteID }); }
    </div>
</div>
@{Html.RenderAction("_Add", "Cooperator", new { siteId = Model.SiteID });}
<script type="text/javascript">

    $(document).on("click", "[id='btnSubmitCooperatorAdd']", function () {
        $("#modal-cooperator-add").modal("hide");
        AjaxFormSubmit();
        LoadPendingCooperatorsList();
    });

    function AjaxFormSubmit() {
        var link = $("#frmAddCooperator").attr("action");

        //Add the Field values to FormData object.
        var formData = new FormData();
        formData.append("Entity.StatusCode", "PENDING");
        formData.append("Entity.ID", $("#Entity_ID").val());
        formData.append("Entity.Salutation", $("#Entity_Salutation").val());
        formData.append("Entity.FirstName", $("#Entity_FirstName").val());
        formData.append("Entity.LastName", $("#Entity_LastName").val());
        formData.append("Entity.JobTitle", $("#Entity_JobTitle").val());
        formData.append("Entity.Organization", $("#Entity_Organization").val());
        formData.append("Entity.OrganizationAbbrev", $("#Entity_OrganizationAbbrev").val());
        formData.append("Entity.EmailAddress", $("#Entity_EmailAddress").val());
        formData.append("Entity.PrimaryPhone", $("#Entity_PrimaryPhone").val());
        formData.append("Entity.CategoryCode", $("#Entity_CategoryCode").val());
        formData.append("Entity.SiteID", $("#Entity_SiteID").val());
        formData.append("Entity.AddressLine1", $("#Entity_AddressLine1").val());
        formData.append("Entity.AddressLine1", $("#Entity_AddressLine1").val());
        formData.append("Entity.AddressLine2", $("#Entity_AddressLine2").val());
        formData.append("Entity.AddressLine3", $("#Entity_AddressLine3").val());
        formData.append("Entity.City", $("#Entity_City").val());
        formData.append("Entity.PostalIndex", $("#Entity_PostalIndex").val());

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            dataType: 'json',
            contentType: false,
            processData: false,
            data: formData,
            success: function (data) {
            },
            error: function (ex) {
                alert("Error Saving Cooperator.");
            }
        });
    }

    // TODO
    function LoadPendingCooperatorsList() {
        link = '@Url.Action("_List","Cooperator")';
        var formData = new FormData();

        formData.append("statusCode", "PENDING");
        formData.append("formatCode", "SLST");

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            contentType: false,
            processData: false,
            data: formData,
            success: function (response) {
                $("#section-cooperator-list-pending").html(response);
            }
        });}

    function LoadSiteList() { }

</script>