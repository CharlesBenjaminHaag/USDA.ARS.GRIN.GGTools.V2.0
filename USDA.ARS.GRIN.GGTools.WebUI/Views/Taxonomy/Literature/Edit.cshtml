@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.LiteratureViewModel
@{
    ViewBag.Title = Model.PageTitle;
    Layout = "~/Views/Shared/_LayoutAdminLTE3.cshtml";
}

@using (Html.BeginForm("Edit", "Literature", FormMethod.Post, new { id = "frmEdit" }))
{
    @Html.HiddenFor(x => x.EventAction)
    @Html.HiddenFor(x => x.EventValue)
    @Html.HiddenFor(x => x.TableName)
    @Html.HiddenFor(x => x.TableCode)
    @Html.HiddenFor(x => x.PageTitle)
    @Html.HiddenFor(x => x.Entity.ID)
    <div class="card card-default">
        <div class="card-header">
            <h3 class="card-title">Summary</h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Abbreviation</label>
                        @Html.TextBoxFor(x => x.Entity.Abbreviation, new { @class = "form-control" })
                    </div>
                    </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Std. Abbreviation</label>
                        @Html.TextBoxFor(x => x.Entity.StandardAbbreviation, new { @class = "form-control" })
                    </div>
                    </div>
                    <div class="col-md-3">
                        <label>Reference Title</label>
                        @Html.TextBoxFor(x => x.Entity.ReferenceTitle, new { @class = "form-control" })
                    </div>
                    <div class="col-md-3">
                        <label>Editor/Author Name</label>
                        @Html.TextBoxFor(x => x.Entity.EditorAuthorName, new { @class = "form-control" })
                    </div>
                </div>
            <div class="row">
                <div class="col-md-2">
                    <label>Type</label>
                    @Html.DropDownListFor(x=>x.Entity.TypeCode, Model.LiteratureTypes, "NULL", new { @class = "form-control" })
                </div>
                <div class="col-md-1">
                    <label>Pub. Year</label>
                    @Html.TextBoxFor(x => x.Entity.PublicationYear, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    <label>Publisher Name</label>
                    @Html.TextBoxFor(x => x.Entity.PublisherName, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    <label>Publisher Location</label>
                    @Html.TextBoxFor(x => x.Entity.PublisherLocation, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    <label>URL</label>
                    @Html.TextBoxFor(x => x.Entity.URL, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <label>Note</label>
                    @Html.TextAreaFor(x => x.Entity.Note, new { @id = "txtNote", @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="card-footer">
            <a href="@Url.Action("Refresh")" class="btn btn-danger">Cancel</a>
            <button type="submit" class="btn btn-primary float-right">Save</button>
        </div>
    </div>
}


    @if (Model.Entity.ID > 0)
    {
        { Html.RenderAction("_List", "Citation", new { @literatureId = Model.Entity.ID }); }
    }
    @Html.Partial("~/Views/Shared/Modals/_NoteLookup.cshtml")

    <script type="text/javascript">
    $(document).ready(function () {
        Init();
        InitializeCKEditor();
    });

    function Init() {
    }

    /*
    * ===================================================================================================
    * NOTE LOOKUP MODAL
    * ===================================================================================================
    */

    $("#btnLookupNote").click(function () {
        SearchNotes();
    });

    function SearchNotes() {
        var link = '@Url.Action("Lookup","Note")';
        var tableName = $("#TableName").val();
        var noteText = $("#txtLookupNote").val();

        var formData = new FormData();

        formData.append("TableName", tableName);
        formData.append("Note", noteText);

        $.ajax({
            url: link,
            type: 'POST',
            cache: false,
            contentType: false,
            processData: false,
            data: formData,
            success: function (response) {
                $("#section-lookup-note-search-results").html(response);
            },
            error: function () {
                alert("Error");
            }
        });
    }

    $(document).on("click", ".note-selector", function () {
        $('#modal-note-lookup').modal('hide');
        var selectedNote = $(this).val();
        CKEDITOR.instances["txtNote"].setData(selectedNote);
    });

    /*
     * ===================================================================================================
     * CKEDITOR
     * ===================================================================================================
     */
    function InitializeCKEditor() {
        const editor = CKEDITOR.replace('txtNote', {
            width: '100%',
            height: 100,
            enterMode: CKEDITOR.ENTER_BR
        }
        );

        //editor.addCommand("searchNotes", {
        //    exec(edt) {
        //        OpenNoteLookupModal();
        //    }
        //});

        editor.config.coreStyles_italic = { element: 'i', overrides: 'em' };

        editor.ui.addButton('SuperButton', {
            label: "Search taxon record notes.",
            command: 'searchNotes',
            toolbar: 'insert',
            height: 80,
            width: 100,
            icon: 'https://cdn-icons.flaticon.com/png/128/3031/premium/3031293.png?token=exp=1643047176~hmac=8e60d1aebf934f53fda6eb320d1ffedc'
        });
    }

    </script>
