@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.SpeciesViewModel

<div id="section-search-results" class="card card-success">
    <div class="card-header">
        <h3 class="card-title">Species (@Model.DataCollection.Count)</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <div id="section-search-results">
            <div id="section-search-results">
                <table id="data_table_taxonomy_species" class="table table-striped ggtools-table" style="width:100%;">
                    <thead>
                        <tr>
                            
                            <th width="5%">ID</th>
                            <th>Name</th>
                            <th>Synonym</th>
                            <th>Accepted</th>
                            <th>Protologue</th>
                            <th>Verified</th>
                            <th>By</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.DataCollection.Count() > 0)
                        {
                            foreach (var result in Model.DataCollection)
                            {
                                <tr>
                                    <td>
                                        @result.ID
                                    </td>
                                   
                                    <td>@Html.Raw(result.AssembledName)</td>
                                    <td><span class="badge badge-info">@result.SynonymDescription</span></td>
                                    <td>@Html.Raw(Model.FormatBoolean(result.IsAcceptedName))</td>
                                    <td>
                                        @Html.Raw(result.Protologue)
                                    </td>
                                    <td>
                                        @if (result.NameVerifiedDate > DateTime.MinValue)
                                        {
                                            @result.NameVerifiedDate.ToString("yyyy-MM-dd")
                                        }
                                    </td>
                                    <td>
                                        @result.VerifiedByCooperatorName
                                    </td>
                                    <td>
                                        @if (Model.EventAction == "FOLDER")
                                        {
                                            <a href="@Url.Action("DeleteItem", "Folder", new { @folderId = result.FolderID, @appUserItemListId = result.AppUserItemListID })"
                                               class="btn btn-danger btn-sm float-right row-edit margin-r-5">
                                                <i class="fa fa-trash"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a href="@Url.Action("Edit", "Species", new { entityId = result.ID })" class="btn btn-default btn-sm float-right row-edit">
                                                <i class="fa fa-edit"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>


