@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.EconomicUseViewModel
@if (Model.DataCollection.Count > 0)
{
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">Economic Uses (@Model.DataCollection.Count)</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <div id="section-search-results" class="data-list">
            <table id="data-table-economic-uses" class="table table-striped ggtools-table">
                <thead>
                    <tr>
                        <th></th>
                        <th width="5%">ID</th>
                        <th>Species Name</th>
                        <th>Usage Code</th>
                        <th>Usage Description</th>
                        <th>Usage Type</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var result in Model.DataCollection)
                    {
                        <tr>
                            <td>
                                @result.ID
                            </td>
                            <td>@result.ID</td>
                            <td>@result.SpeciesName</td>
                            <td>@result.EconomicUsageCode</td>
                            <td>@result.EconomicUsageDescription</td>
                            <td>@result.EconomicUsageType</td>
                            <td>@result.CitationID</td>
                            <td>
                                <a href="@Url.Action("Edit", "EconomicUse", new { entityId = result.ID })" class="btn btn-default btn-sm float-right row-edit">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
}
