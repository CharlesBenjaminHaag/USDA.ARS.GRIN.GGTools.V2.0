<div class="modal fade" id="modal-note">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Add Note</h4>
            </div>
            <div class="modal-body">
                <textarea id="txtNote" rows="5" class="form-control note-format"></textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                <button id="btnSubmitNote" type="button" class="btn btn-primary" data-dismiss="modal">Save</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<script type="text/javascript">
    $("#btnSubmitNote").click(function () {
        var eventNote = $("#txtNote").val();
        $("#EventAction").val("UPDATE");
        $("#EventValue").val("NRR_NOTE");
        $("#EventNote").val(eventNote);
        $("#frmEdit").submit();
    });
</script>