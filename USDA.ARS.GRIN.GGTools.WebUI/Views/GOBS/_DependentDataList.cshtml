@using System.Data;
@using USDA.ARS.GRIN.GGTools.DataLayer;
@model USDA.ARS.GRIN.GGTools.ViewModelLayer.SysDynamicQueryViewModel

@Html.HiddenFor(x => x.RowsAffected)
@Html.HiddenFor(x => x.TableName)

@{ 
    string primaryKeyCol = String.Empty;
    int primaryKeyValue = 0;
}

@if (Model.DataCollectionDataTable.Rows.Count > 0)
{
    <div class="card card-success">
        <div class="card-header">
            <h3 class="card-title">
                <i class="far fas fa-table nav-icon"></i>
                @Model.TableName (@Model.DataCollectionDataTable.Rows.Count Records Found)
            </h3>
            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <table id="@Model.TableName" class="table table-striped" style="width:100%;">
                <thead>
                    <tr>
                        @foreach (DataColumn col in Model.DataCollectionDataTable.Columns)
                        {
                            <th>
                                @col.ColumnName
                            </th>
                        }
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow dr in Model.DataCollectionDataTable.Rows)
                    {
                        <tr>
                            @foreach (DataColumn rowCol in Model.DataCollectionDataTable.Columns)
                            {
                                <td>
                                    @dr[rowCol.ColumnName]
                                </td>

                                if (rowCol.ColumnName == "gobs_" + Model.TableName + "_id")
                                {
                                    primaryKeyCol = rowCol.ColumnName;
                                    primaryKeyValue = Int32.Parse(@dr[rowCol.ColumnName].ToString());
                                }
                            }
                            <td>
                                <a href="@Url.Action("Edit", "GOBS", new { entityId = primaryKeyValue, objectType = Model.TableName })" class="btn btn-default btn-sm btn-flat float-right">
                                    <i class="fa fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>

                </tfoot>
            </table>
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        var searchResultsVisible = 0;
        searchResultsVisible = $("#RowsAffected").val();

        if (searchResultsVisible > 0) {
            var tableName = $("#TableName").val();
            /*InitDataTableDynamicQuery(tableName);*/
        }
    });

    function InitDataTableDynamicQuery(tableName) {



        tableName = "#" + tableName;
        $(document).ready(function () {
            table = $(tableName).DataTable({
                dom: 'Blfrtip',
                paging: true,
                "pageLength": 10,
                scrollX: true,
                responsive: true,
                buttons: [
                    'selectAll',
                    'selectNone',
                    'csv',
                    'excel',
                    'pdf',
                    {
                        text: 'Add to Folder',
                        action: function (e, dt, node, config) {
                            OpenFolderModal();
                        }
                    }
                ],
                select: true,
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]],
                //columnDefs: [
                //    { targets: [0], visible: false }
                //]
            });

            $('table.ggtools').on('click', 'tr', function () {
                var data = table.row(this).data();
                /*alert('You clicked on ' + data[0] + "'s row");*/
            });
        });
    }

</script>