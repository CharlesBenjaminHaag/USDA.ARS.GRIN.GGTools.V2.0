@model USDA.ARS.GRIN.GGTools.Taxonomy.ViewModelLayer.GeographyViewModel
<button id="btnFilterCountries" type="button" class="btn btn-default btn-sm btn-block">
    <i class="fas fa-filter"></i> Filter Countries
</button>
<br />
<table id="data-table-geography-subcontinents" class="table table-striped ggtools" style="width:100%">
    <thead>
        <tr>
            <th></th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.DataCollectionSubContinents.Count() > 0)
        {
            foreach (var result in Model.DataCollectionSubContinents)
            {
                <tr>
                    <td>
                        @result.ID
                    </td>
                    <td>@result.SubContinent</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3">
                    <div class="callout callout-info" style="vertical-align:middle; margin-top:5px;">
                        Your search returned no matches.
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>


<script type="text/javascript">
    $(document).ready(function () {
        InitDataTableGeo("data-table-geography-subcontinents");
    });
</script>
